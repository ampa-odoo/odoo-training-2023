<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="multipal_offer_wizard_form_view" model="ir.ui.view">
        <field name="name">Multipal.offer</field>
        <field name="model">multipal.offer.wizard</field>
        <field name="arch" type="xml">
            <form String="Offer">
                <sheet>
                    <group>
                        <field name="price"/> 
                        <field name="partner_id"/> 
                    </group>
                </sheet>
                <footer>
                    <button string="Make offers" type="object" name="Multipal_offers"/>
                    <button string="Cancle" special="cancel" class="btn btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
