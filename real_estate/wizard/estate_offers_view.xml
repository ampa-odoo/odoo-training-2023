<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="estate_offer_apply_wizard_view_form" model="ir.ui.view">
        <field name="name">Offers</field>
        <field name="model">estate.apply.offer.wizard</field>
        <field name="arch" type="xml">
            <form string="Test">
                <group class="oe_title">
                    <field name="price"></field>
                    <field name="partner_id" />
                </group>
                <footer>
                    <button name="action_done" string="Submit" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/> 
                </footer>
            </form>
        </field>
    </record>


    <!-- for calling from action -->

    <record id="estate_offer_apply_wizard_action" model="ir.actions.act_window">
        <field name="name">Multiple Offers</field>
        <field name="res_model">estate.apply.offer.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="real_estate.estate_offer_apply_wizard_view_form" />
        <field name="target">new</field>
    </record>
</odoo>