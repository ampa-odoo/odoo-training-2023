<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="multi_offer_wizard_form" model="ir.ui.view">
        <field name="name">multi.offer.form.view.wiz</field>
        <field name="model">wizard.property.offer</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="status" widget="statusbar" options="{'clickable' : '1'}"/>
                </header>
                <group>
                    <group>
                        <field name="price" />
                        <field name="status" />
                        <field name="buyer_id" />
                    </group>
                        <notebook>
                            <page name="Properties">
                                <field name="property_ids" />
                            </page>
                        </notebook>
                </group>
                <footer>
                    <separator/>
                    <footer>
                        <button name="action_add_offer" type="object" string="Add Offer" class="btn-primary" data-hotkey="q"/>
                        <button string="Cancel" special="cancel" class="btn-secondary" data-hotkey="z"/>
                    </footer>
                </footer>
            </form>
        </field>
    </record>

