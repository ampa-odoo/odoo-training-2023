<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="property_view">
        <t t-call="website.layout">
            <div class="oe_structure" style="padding-top:1rem;">
                <div class="container">
                    <div id="website_published_button" class="float-right" groups="real_estate.estate_group_manager"> 
                            <t t-call="website.publish_management">
                                <t t-set="object" t-value="property"/>
                                <t t-set="publish_edit" t-value="True"/>
                                <t t-set="action" t-value="'real_estate.real_estate_property_view'"/>
                                <t t-set="menu" t-value="env.ref('real_estate.real_estate_menu_root').id"/>
                            </t>
                    </div>
                    
                    <h3 t-field="property.name"/>
                    <div>
                        <t t-call="real_estate.offers_template"/>
                    </div>
                </div>
            </div>  
        </t>
    </template>
</odoo>
