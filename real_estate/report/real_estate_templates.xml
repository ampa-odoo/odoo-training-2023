<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Sub Template for Details-->
    <template id="report_property_sub_template">
            <h1>
                <span t-field="property.name"/>
            </h1>
            <div>
                <strong>Salesman: </strong>
                <span t-field="property.salesperson_id"/>
            </div>
            <div>
                <strong>Expected Price: </strong>
                <span t-field="property.expected_price"/>
            </div>
            <div class="state">
                <strong>State: </strong>
                <span t-field="property.state"/>
            </div>
    </template>

    <!-- Sub Template For Offers-->
    <template id="report_property_offers_sub_template">
        <t t-id="offer_table_template" class="mt-3">
            <t t-set="offers" t-value="property.mapped('offer_ids')"/>
            <t t-if="offers">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Price</th>
                            <th>Partner Id</th>
                            <th>Property Type Id</th>
                            <th>Validity</th>
                            <th>Date Deadline</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="offers" t-as="offer">
                            <td><span t-field="offer.price"/></td>
                            <td><span t-field="offer.partner_id"/></td>
                            <td><span t-field="offer.property_type_id"/></td>
                            <td><span t-field="offer.validity"/></td>
                            <td><span t-field="offer.date_deadline"/></td>
                            <td><span t-field="offer.status"/></td>
                        </tr>
                    </tbody>
                </table>
            </t>
            <t t-else="">
                <div>
                    <strong>Sorry! but currently no offer available on this property</strong>
                </div>
            </t>
        </t>
    </template>

    <!-- Main Template -->
    <template id="report_property_offers_template">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                <div class="page">
                    <t t-call="real_estate.report_property_sub_template"/>
                    <t t-call="real_estate.report_property_offers_sub_template"/>
                </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
