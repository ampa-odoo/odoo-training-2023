<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_property_offers">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>
                            <span t-field="property.name"/>
                        </h2>
                        <div>
                            <strong>Expected Price: </strong>
                            <span t-field="property.expected_price"/>
                        </div>

                    <t t-name="property_report">
                        <t t-set="offers" t-value="property.mapped('offer_ids')"/>

                        <t t-if="offers ">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Price</th>
                                            <th>Validity</th>
                                            <th>Deadline</th>
                                            <th>States</th>
                                            
                                        </tr>
                                    </thead>
                                    <tbody>
                                
                                        <tr t-foreach="offers" t-as="offer">
                                            <td>
                                                <span t-field="offer.price"/>
                                            </td>
                                            <td>
                                                <span t-field="offer.validity"/>
                                            </td>
                                            <td>
                                                <span t-field="offer.date_deadline"/>
                                            </td>
                                            <td>
                                                <span t-field="offer.states"/>
                                            </td>
                                        
                                        </tr>
                                    </tbody>
                                </table>
                            </t>
                            <t t-else=''>
                                No offer have been made yet!!
                            </t>
                        </t>
                    </div>
                </t>
            </t>
        </t>
       
    </template>

    

    <template id="report_property_user">
        <t t-foreach="docs" t-as="property_user">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>
                            <span t-field="property_user.name"/>
                        </h2>
                         <t t-set="properties" t-value="property_user.mapped('property_ids')"/>
                            <tr t-foreach="properties" t-as="property">
                                <td>
                                    <span t-field="property.name"/>
                                </td>
                                <td>
                                    <span t-field="property.salesperson"/>
                                </td>
                                <td>
                                    <span t-field="property.expected_price"/>
                                </td>
                                <td>
                                    <span t-field="property.status"/>
                                </td>

                                <div>Offers</div>
                                        <t t-call="real_estate.report_property_offers"/>

                            </tr>
                         
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>