<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_property_offers">
        <t t-foreach="docs" t-as="property">
            <!-- <t t-if="property.offer_ids"> -->
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page" >
                        <div>
                            <h1>
                                <span t-field="property.company_id"/>
                            </h1>
                            <h2>
                                <span t-field="property.company_id.street"/>
                            </h2>
                            <h3>
                                <span t-field="property.company_id.city"/>
                                <span t-field="property.company_id.state_id"/>
                                <span t-field="property.company_id.zip"/>
                                <span t-field="property.company_id.country_id"/>
                            </h3>
                        </div>
                        <h1>
                            <strong>Salesman: </strong>
                            <span t-field="property.salesman_id"/>
                        </h1>
                        <h1>
                            <span t-field="property.name"/>
                        </h1>
                        <div>
                            <strong>Expected Price: </strong>
                            <span t-field="property.expected_price"/>
                        </div>
                        <div>
                            <strong>Status: </strong>
                            <span t-field="property.state"/>
                        </div>
                            <table class="table table-bordered" style="border: 1px solid #9A9A9A;">
                                <thead>
                                    <tr style="background-color: #9A9A9A; color: white;">
                                        <th >Price</th>
                                        <th >Partner</th>
                                        <th >Validity(days)</th>
                                        <th >Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-set="offers" t-value="property.mapped('offer_ids')"/>
                                    <tr t-foreach="offers" t-as="offer">
                                        <td >
                                            <span t-field="offer.price"/>
                                        </td>
                                        <td>
                                            <span t-field="offer.partner_id"/>
                                        </td>
                                        <td >
                                            <span t-field="offer.validity"/>
                                        </td>
                                        <td >
                                            <span t-field="offer.status"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                    </div>
                </t>
            </t>
        </t>
        <!-- </t> -->
        <!-- <t t-call="web.internal_layout">
            <div class="page">
                <h1>Report Title</h1>
                <p>No offers available yet.</p>
            </div>
        </t> -->

    </template>
</odoo>