<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_property_offers">
        <t t-foreach="docs" t-as="property">
        <t t-set="company" t-value="docs.env.company"/>
        <t t-foreach="docs" t-as="doc"> <!-- each doc is a 'res.partner', called doc for the 'web.external_layout' template -->
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                <!-- <div style="width: 45%;">
                    <img t-if="doc.company_id.logo" t-att-src="'data:image/png;base64,%s' %doc.company_id.logo"/>
                    </div> -->
                    <h2><strong>comapany Name: </strong>
                            <span t-field="property.company_id"/>
                    </h2>
                    <div class="page">
                        <h2><strong>Property Name: </strong>
                            <span t-field="property.name"/>
                        </h2>
                        <div>
                            <strong>Sales man: </strong>
                            <span t-field="property.sales_id"/>
                        </div>
                        <div>
                            <strong>Expected Price: </strong>
                            <span t-field="property.expeccted_price"/>
                        </div>                  
                        <table class="table" t-if="property.offer_ids">
                                <thead>
                                    <tr>
                                        <th>Price</th>
                                        <th>Partner</th>
                                        <th>Validity</th>
                                        <th>deadline</th>
                                        <th>state</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-set="offers" t-value="property.mapped('offer_ids')"/>
                                    <tr t-foreach="offers" t-as="offer">
                                        <td>
                                            <span t-field="offer.price"/>                                                                                                    
                                        </td>
                                        <td>
                                            <span t-field="offer.partner_id"/>
                                        </td>
                                        <td>
                                            <span t-field="offer.validity"/>
                                        </td>
                                        <td>
                                            <span t-field="offer.date_deadline"/>
                                        </td>
                                        <td>
                                            <span t-field="offer.status"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <t t-else="">
                                <p>currently offer are not defined..</p>
                            </t>                                                
                    </div>
                </t>
            </t>
        </t>
    
</t>
        
