<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="estate_property_tags_tree_view" model="ir.ui.view">
            <field name="name">Real Estate Tags Tree View</field>
            <field name="model">estate.property.tag</field>
            <field name="arch" type="xml">
                <tree string="Property Tags">
                    <field name="name"/>
                    <field name="color" widget="color_picker"/>
                </tree>
            </field>
        </record>
        <record id="estate_property_tags_form_view" model="ir.ui.view">
            <field name="name">Real Estate Tags Form View</field>
            <field name="model">estate.property.tag</field>
            <field name="arch" type="xml">
                <form string="Real Estate Tags">
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="color" widget="color_picker"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
