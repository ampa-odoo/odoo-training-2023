<odoo>
<data>
        <record id="menu_for_estate" model="website.menu">
            <field name="name">Properties</field>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="url">estate/estate</field>
        </record>
</data>
<template id="demo_controller_template">
<t t-call="website.layout">
<div class="oe_structure" />
        <div class="oe_structure">
        <!-- <t t-call="web.html_container">
            <t t-call="web.basic_layout"> -->
            <t t-call="website.website_search_box"></t>
                <div class="page">
                    <t t-set="title">Estate Property</t>
                    <div class="container">
                    <div class="float-right">
                        <t t-foreach="records" t-as="property">
                            <h4 style="margin-top: 20px;">
                                <a t-attf-href="/estate/{{ slug(property) }}">
                                    <p>
                                        <img t-attf-src="data:image/jpg;base64,{{property.image}}" style="align:left; width:100px;height:100px;"/>
                                        <t t-esc="property.name"/>
                                        
                                    </p>
                                </a>
                            </h4>
                        </t>
                        </div>
                    </div>
                </div>
                <!-- <div class="products_pager form-inline justify-content-center mt-3">
<t t-call="website.pager">
<t t-set="_classes">mt-2 ml-md-2</t>
</t>
</div> -->
            <!-- </t>
        </t> -->
        </div>
        </t>
    </template>
    <template id="single_property_template">
    <t t-call="website.layout">
        <t t-call="web.html_container">
            <!-- <t t-call="web.basic_layout"> -->
                <div class="page">
                    <t t-set="title">Estate Property</t>
                    <div class="container">
                        <h4 style="margin-top: 20px;">
                              <p>
                              <div>Property Name:<t t-esc="record.name"/></div>
                             <div><t t-esc="record.postcode"/></div>
                                <div>Property Price:<t t-esc="record.expeccted_price"/></div>
                                <div>Bedroom: <t t-esc="record.bedroom"/></div>
                                <div>Realated Image: <img t-attf-src="data:image/jpg;base64,{{record.image}}" style="align:left; width:100px;height:100px;"/></div>
                                </p>
                                <!-- <t t-esc="record.type_id"/> -->                            
                        </h4>
                    </div>
                </div>
            </t>
        </t>
    </template>

</odoo>

