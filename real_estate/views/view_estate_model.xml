<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="test_model_action" model="ir.actions.act_window">
            <field name="name">Real Estate</field>
            <field name="res_model">real.estate</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="property_test_model_action" model="ir.actions.act_window">
            <field name="name">Advertisements</field>
            <field name="res_model">estate.property.type</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="property_test_model_action3" model="ir.actions.act_window">
            <field name="name">Property Types</field>
            <field name="res_model">estate.property.type</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="property_test_model_action4" model="ir.actions.act_window">
            <field name="name">Property Tags</field>
            <field name="res_model">estate.property.type</field>
            <field name="view_mode">tree,form</field>
        </record>


        <record id="model_view_tree" model="ir.ui.view">
            <field name="name">Tree.View</field>
            <field name="model">real.estate</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="description" />
                    <field name="postcode" optional='hide' />
                    <field name="date_availability" optional='hide' />
                    <field name="expected_price" optional='hide' />
                    <field name="selling_price" optional='hide' />
                    <field name="bedrooms" />
                </tree>
            </field>
        </record>


        <record id="model_view_form" model="ir.ui.view">
            <field name="name">Form View</field>
            <field name="model">real.estate</field>
            <field name="arch" type="xml">
                <form string="Real Estate">
                    <header>
                        <field name="state" widget="statusbar" options="{'clickable':'1'}" />
                    </header>
                    <sheet>
                        <label for="name">Name</label>
                        <h1>
                            <field name="name" />
                        </h1>
                        <field name="tag_ids" widget="many2many_tags"></field>
                        <group>
                            <group>
                                <field name="postcode" />
                                <field name="date_availability" date='create_date' />
                            </group>
                            <group>
                                <field name="expected_price" />
                                <field name="selling_price" />
                                <field name="property_type_id" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description"></field>
                                </group>
                                <group>
                                    <group>
                                        <field name="bedrooms"></field>
                                        <field name="facades" />
                                    </group>
                                    <group>
                                        <field name="garage" />
                                        <field name="living_area" />
                                    </group>
                                </group>
                            </page>
                            <page string="Offers">
                            
                                        <field name="offer_ids">
                                            <tree>
                                                <field name="price" />
                                                <field name="property_id" />
                                                <field name="status" />
                                            </tree>
                                        </field>
                                
                            </page>
                            <page string="Garden">
                                <group>
                                    <group>
                                        <field name="garden" />
                                        <field name="garden_orientation" />
                                    </group>
                                    <group>
                                        <field name="garden_area" />
                                    </group>
                                </group>
                            </page>
                            <page string="Other Information">
                                <group>
                                    <field name="buyer_id" />
                                    <field name="salesperson_id" />
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="real_estate_search" model="ir.ui.view">
            <field name="name">Real Estate</field>
            <field name="model">real.estate</field>
            <field name="arch" type="xml">
                <search string="Real Estate">
                    <field name="name" />
                    <field name="date_availability" />
                    <field name="selling_price" />
                    <field name="bedrooms" />

                    <filter string="Garden" name="garden" domain="[('garden', '=', True)]" />
                    <separator />
                    <filter string="Bedrooms" name="bedrooms" domain="[('bedrooms', '&lt;', 3)]" />
                    <separator />
                    <filter string="Archived" name="active" domain="[('active', '=', False)]" />
                    <separator />
                    <filter string="selling price" name="selling_price"
                        domain="[('selling_price', '>', '50')]" />

                    <group expand="1" string="Group By">
                        <filter string="Post Code" name="postcode" context="{'group_by':'postcode'}" />
                        <separator />
                        <filter name="date_availability" string="Creation Date"
                            context="{'group_by': 'create_date'}" />
                    </group>
                </search>
            </field>
        </record>

    </data>
</odoo>