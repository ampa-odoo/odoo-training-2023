<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="estate_property_tag_model_action" model="ir.actions.act_window">
        <field name="name">Real Estate Property Tags</field>
        <field name="res_model">estate.property.tag</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">No property tag found, Please add your property tag over here</p>
            <p>Use the top left
                <strong>CREATE</strong> button to add new property tag!!!
            </p>
        </field>
    </record>
    <!--** List view **-->
    <record id="estate_property_tag_model_tree_view" model="ir.ui.view">
        <field name="name">Real Estate Property Tags List View</field>
        <field name="model">estate.property.tag</field>
        <field name="arch" type="xml">
            <tree string="List View">
                <field name="name"/>
            </tree>
        </field>
    </record>
    <!--** Form view **-->
    <record id="estate_property_tag_model_form_view" model="ir.ui.view">
        <field name="name">Real Estate Property Tags Form View</field>
        <field name="model">estate.property.tag</field>
        <field name="arch" type="xml">
            <form string="Property Tags Form">
                <sheet>
                    <br/>
                    <h1>
                        <field name="name" placeholder="e.g. Cozy, Renovated..."/>
                    </h1>
                    <br/>
                    <notebook>
                        <page name="description" string="Description">
                            
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>