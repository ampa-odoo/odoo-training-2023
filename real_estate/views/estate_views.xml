<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="real_estate_list_view" model="ir.ui.view">
        <field name="name">Real Estate List View</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Real Estate">
                <field name="name"/>
                <field name="description"/>
                <field name="expected_price" optional="show"/>
            </tree>
        </field>
    </record>
    <record id="real_estate_form_view" model="ir.ui.view">
        <field name="name">Real Estate Form View</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <label for="name" string="Name"/>
                    <h1><field name="name"/></h1>
                    <group>
                        <group> 
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                            <label for="description" string="Description"/>
                                <field name="description"/>
                                <group>
                                    <field name="bedrooms"/>
                                    <field name="living_area"/>
                                    <field name="garage"/>
                                    <field name="facades"/>
                                </group>
                            </group>
                        </page>
                        <page string="Garden">
                            <group>
                                <field name="garden"/>
                                <field name="garden_area"/>
                                <field name="garden_orientation"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
