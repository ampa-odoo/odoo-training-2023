<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="test_model_action" model="ir.actions.act_window">
        <field name="name">Real Estate</field>
        <field name="res_model">real.estate</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="real_estate_list_view" model="ir.ui.view">
        <field name="name">Real Estate List View</field>
        <field name="model">real.estate</field>
        <field name="arch" type="xml">
            <tree string="Real Estate">
                <field name="name"/>
                <field name="description"/>
                <field name="expected_price"/>
            </tree>
        </field>
    </record>
    <record id="real_estate_form_view" model="ir.ui.view">
        <field name="name">Real Estate Form View</field>
        <field name="model">real.estate</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <h1><field name="name" style="width:300%"/></h1>
                        </group>
                    </group>
                    <group>
                        <group> 
                            <field name="postcode"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                        </group>
                    </group>
                    <group>
                        <group> 
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <!-- <label for="description" for="description"/>Desciption</label> -->
                            <group>
                                <field name="description"/>
                            </group>
                            <group>
                                <field name="bedrooms"/>
                            </group>
                            <group>
                                <field name="living_area"/>
                            </group>
                            <group>
                                <field name="facades"/>
                            </group>
                            <group>
                                <field name="garage"/>
                            </group>
                            <group>
                                <field name="garden"/>
                            </group>
                            <group>
                                <field name="garden_area"/>
                            </group>
                            <group>
                                <field name="garden_orientation"/>
                            </group>
                            
                        </page>
                    </notebook>
                </sheet>
                
            </form>
        </field>
    </record>
</odoo>
