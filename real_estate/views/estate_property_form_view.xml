<?xml version="1.0"?>
    <odoo>
    <record id="real_estate_view_form" model="ir.ui.view">
            <field name="name">real.estare.view.form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form string="Lost Reason">
                    <sheet>
                        <h1>
                            <label for="name" string="Product Name" />
                            <field name="name" nolable="1"/>
                        </h1>
                    
                                <group>
                                
                                    <group>
                                        <field name="postcode"/>
                                    </group>
                                    <group>
                                        <field name="expeccted_price"/>
                                    </group>

                                    <group>
                                        <field name="date_availability"/>
                                    </group>
                                    <group>
                                        <field name="selling_price"/>
                                    </group>

                                        <notebook>
                                            <page string="Description">
                                                <group>
                                                    <field name="description"/>                                                                                              
                                                    <field name="living_area"/>                                                
                                                    <field name="facades"/>                                                
                                                    <field name="garage"/>                                                
                                                    <field name="garden"/>
                                                     <field name="garden_area"/>                                                
                                                    <field name="garden_orientation"/>                                                
                                                    <field name="state"/>
                                                </group>  
                                                                             
                                            </page>
                                            <page string="Other Info.">
                                            <group>
                                                   <field name="salesman"/>                                                
                                                    <field name="buyer"/>
                                                </group>   
                                            </page>   
                                        </notebook>
                                    
                                </group>
                    </sheet>
                </form>
            </field>
        </record>
    </odoo>