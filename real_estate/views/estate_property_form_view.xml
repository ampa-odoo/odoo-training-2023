<?xml version="1.0"?>
    <odoo>
    <record id="real_estate_view_form" model="ir.ui.view">
     <field name="name">real.estare.view.form</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
        <form string="Lost _">
            <sheet>
             <header >
             <field name='state' widget='statusbar' options="{'clickable': '1'}" />
             </header>
                 <h1>
                    <label for="name" string="Product Name" />
                        <field name="name" nolable="1"/>
                </h1>
                    
                <group>                                
                <group>
                    <field name="postcode"/>
                </group>
                <group>
                     <field name="expeccted_price"/>
                 </group>
                 <group>
                     <field name="date_availability"/>
                 </group>
                 <group>
                     <field name="selling_price"/>
                 </group>
                 <group>
                     <field name="best_price"/>
                 </group>

                <notebook>
                <page string="Description">
                 <group>
                  <field name="description"/> 
                  <field name="type_id" options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                  <field name="tag_ids" widget="many2many_tags" string="Tag Name"/>                                                                                            
                  <field name="living_area"/>                                                
                   <field name="facades"/>                                                
                  <field name="garage"/>                                                
                  <field name="garden"/>
                  <field name="garden_area"/>                                                
                  <field name="total_area"/>
                  <field name="garden_orientation"/>                                              
                  </group>  
                                                                    
                  </page>
                     <page string="offer.">
                      <field name="offer_ids"/>                                  
                                           
                           
                     </page>  
                     <page string="Other Info.">
                     <group>
                       <field name="sales_id"/>                                                
                       <field name="buyer_id"/>
                    </group>   
                     </page>   
             </notebook>
                                    
             </group>
          </sheet>
         </form>
        </field>
     </record>
     </odoo>