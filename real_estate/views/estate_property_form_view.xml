<?xml version="1.0"?>
<odoo>
<record id="real_estate_view_form" model="ir.ui.view">
        <field name="name">real.estare.view.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Lost Reason">
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                            <group>
                                <group>
                                    <field name="postcode"/>
                                </group>
                                <group>
                                    <field name="expeccted_price"/>
                                </group>

                                <group>
                                    <field name="date_availability"/>
                                </group>
                                <group>
                                    <field name="selling_price"/>
                                </group>

                                    <notebook>
                                        <page string="Description">
                                            <group>
                                                <field name="description"/>
                                            </group>
                                            <group>
                                                <field name="bedroom"/>
                                            </group> 
                                            <group>
                                                <field name="living_area"/>
                                            </group>  
                                             <group>
                                                <field name="facades"/>
                                            </group>  
                                             <group>
                                                <field name="garage"/>
                                            </group> 
                                             <group>
                                                <field name="garden"/>
                                            </group>  
                                             <group>
                                                <field name="garden_area"/>
                                            </group>  
                                             <group>
                                                <field name="garden_orientation"/>
                                            </group>                                        
                                        </page>
                                    </notebook>
                                
                            </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>