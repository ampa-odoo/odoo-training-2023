<odoo>
<!-- Tree View -->
    <record id="estate_property_tree_view" model="ir.ui.view">
        <field name="name">Estate Offers</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="price"/> 
                <field name="partner_id"/>
                <button name="accept_action" string=" " type="object" icon="fa-check"/>
                <button name="reject_action" string=" " type="object" icon="fa-times"/> 
                <field name="status" />
            </tree>
        </field>
    </record>

<!-- Form View -->
    <record id="estate_property_form_view" model="ir.ui.view">
        <field name="name">Estate Offers</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form String="Offer">
                <sheet>
                    <group>
                        <field name="price"/> 
                        <field name="status"/>
                    </group>
                    <group>
                        <field name="partner_id"/> 
                        <field name="validity" />
                    </group>
                    <group>
                        <field name="date_deadline" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>