<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_property_tree_view" model="ir.ui.view">
        <field name="name">property</field>
        <field name="model">estate.properties</field>
        <field name="arch" type="xml">
            <tree string="Real estate" decoration-success="state in  ('offer_received','offer_accepted')"
                                        decoration-bf="state == 'offer_accepted'"
                                        decoration-danger="state == 'canceled'"
                                        decoration-muted="state == 'sold'">
                <field name="name"/>
                <field name="description"/>
                <field name="postcode"/>
                <field name="date_availability" optional="hidden"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <field name="garage"/>
                <field name="garden"/>
                <field name="garden_area" />
                <field name="garden_orientation" attrs="{'invisible': [('garden', '=', False)]}"/>
                <field name="active"/>
                <field name="state"/>
            </tree>
        </field>
    </record> 
    <record id="estate_property_form_view" model="ir.ui.view">
        <field name="name">New property</field>
        <field name="model">estate.properties</field>
        <field name="arch" type="xml">
            <form string="Real estate">
                <header>
                    <button name="action_sold" type="object" states="new,offer_received,offer_accepted" string="Sold" class="oe_highlight"/>
                    <button name="action_canceled" type="object" states="new,offer_received,offer_accepted" string="Canceled"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Canceled"
                                bg_color="bg-danger"
                                attrs="{'invisible': [('state', '!=', 'canceled')]}"/>
                        <widget name="web_ribbon" title="Sold"
                                bg_color="bg-success"
                                attrs="{'invisible': [('state', '!=', 'sold')]}"/>
                    <h1>
                        <field name="name" placeholder="Enter Property Name"/>
                    </h1>
                    <group>
                        <field name="tag_ids" widget="many2many_tags" options="{'color_field':'color'}"/>
                    </group>
                    <group>
                        <group>
                            <field name="postcode"/>
                        </group>
                        <group>
                            <field name="date_availability" />
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                        </group>
                        <group>
                            <field name="selling_price"/>
                        </group>
                        <group>
                            <field name="best_offer"/>
                        </group>
                        <group>
                            <field name="state"/>
                        </group>
                        <group>
                            <field name="type_id" options="{'no_create':True}"/>
                        </group>
                    <notebook>
                        <page name="description">
                            <group>
                                <field name="description"/>
                            </group>
                            <group>
                                <field name="bedrooms"/>
                            </group>
                            <group>
                                <field name="living_area"/>
                            </group>
                            <group>
                                <field name="facades"/>
                            </group>
                            <group>
                                <field name="garage"/>
                            </group>
                            <group>
                                <field name="garden"/>
                            </group>
                            <group>
                                <field name="garden_area" attrs="{'invisible': [('garden', '=', False)]}"/>
                            </group>
                            <group>
                                <field name="garden_orientation" attrs="{'invisible': [('garden', '=', False)]}"/>
                            </group> 
                            <group>
                                <field name="total_area"/>
                            </group>
                        </page>
                        <page name="Offers">
                        
                                <field name="offer_ids"  attrs="{'readonly': [('state', 'in', ('offer_accepted','sold','canceled'))]}"/>

                        </page>
                        <page name="Other details">
                            <group>
                                <field name="salesperson_id"/>
                            </group>
                            <group>
                                <field name="buyer_id"/>
                            </group>
                            <group>
                                <field name="company_id"/>
                            </group>
                        </page>
                    </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="real_estate_search_view" model="ir.ui.view">
        <field name="name">Real Estate Search</field>
        <field name="model">estate.properties</field>
        <field name="arch" type="xml">
            <search string="real estate search">
                <field name="name"/>
                <field name="description"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="living_area" filter_domain="[('living_area','>=',self)]"/>
                <field name="facades"/>
                    <filter string="Pincode" name="group_by_pincode" context="{'group_by':'postcode'}"/>
                    <filter string="Bedrooms" name="group_by_bedrooms" context="{'group_by':'bedrooms'}"/>
                    <filter string="Available" name="available" domain="['|',('state', '=', 'new'),('state','=','offer_received')]"/>
                    <!-- <filter string="Active" name="active" domain="[('active', '=', True)]"/> -->
            </search>
        </field>
    </record>

    <record id="estate_property_kanban_view" model="ir.ui.view">
        <field name="name">estate.property.kanban</field>
        <field name="model">estate.properties</field>
        <field name="arch" type="xml">
            <kanban default_group_by="type_id" records_draggable="0">
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div>
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                            </div>
                            <div>
                                Expected Price: <field name="expected_price"/>
                            </div>
                            <div t-if="record.state.raw_value == 'offer_received'">
                                Best Offer: <field name="best_offer"/>
                            </div>
                            <div t-if="record.state.raw_value == 'offer_accepted'">
                                Selling Price: <field name="selling_price"/>
                            </div>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <!-- template for controller -->

    <!-- <template id="index">
        <title>Real Estate</title>
        <t t-foreach="properties" t-as="property">
            <p><t t-esc="property"/></p>
            <p><t t-esc="property.name"/></p>
        </t>
    </template> -->
    
    <template id="index">
        <t t-call="website.layout">
            <t t-set="title">Real Estate</t>
            <div class="oe_structure">
                <div class="container">
                    <t t-foreach="properties" t-as="property">
                        <p><t t-esc="property.name"/></p>
                    </t>
                </div>
            </div>
        </t>
    </template>

</odoo>