<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="property_list_action" model="ir.actions.act_window">
            <field name="name">Property List</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_available': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a New Property !!!!
                </p>
            </field>
        </record>
        <record id="property_types_action" model="ir.actions.act_window">
            <field name="name">Property Types</field>
            <field name="res_model">estate.property.type</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a Property Type !!!!
                </p>
            </field>
        </record>
        <record id="property_tags_action" model="ir.actions.act_window">
            <field name="name">Property Tags</field>
            <field name="res_model">estate.property.tag</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a New Property Tag !!!!
                </p>
            </field>
        </record>
        <record id="offers_action" model="ir.actions.act_window">
            <field name="name">Offers</field>
            <field name="res_model">estate.property.offer</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a New Property Offer !!!!
                </p>
            </field>
        </record>
        <record id="estate_property_tree_view" model="ir.ui.view">
            <field name="name">Real Estate Tree View</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <tree expand="1" decoration-success="state in ('offer_received', 'offer_accepted')" decoration-muted="state == 'sold'" decoration-bf="state == 'offer_accepted'">
                    <field name="name"/>
                    <field name="property_type_id"/>
                    <field name="postcode"/>
                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    <field name="bedrooms"/>
                    <field name="living_area"/>
                    <field name="expected_price"/>
                    <field name="selling_price"/>
                    <field name="state" invisible="1"/>
                    <field name="description" optional="hide"/>
                    <field name="date_availability" optional="hide"/>
                    <field name="facades" optional='hide'/>
                    <field name="garage" optional='hide'/>
                    <field name="garden" optional='hide'/>
                    <field name="garden_area" optional='hide'/>
                    <field name="garden_orientation" optional='hide'/>
                </tree>
            </field>
        </record>

        <record id="estate_property_search_view" model="ir.ui.view">
            <field name="name">Real Estate Search View</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name="name"/>
                    <field name="property_type_id"/>
                    <field name="living_area" filter_domain="[('living_area', '>=', self)]"/>
                    <filter string="Archived" name="active" domain="[('active', '=', False)]"/>
                    <separator/>
                    <filter string="Selling Price" name="selling_price" domain="[('selling_price', '&lt;', 200)]"/>
                    <group expand="1" string="Group By">
                        <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}"/>
                        <separator/>
                        <filter string="Creation Date" name="date_availability" context="{'group_by':'create_date'}"/>
                        <separator/>
                        <filter string="Available" name="available" domain="['|',('state', '=', 'new'),('state', '=', 'offer_received')]"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="estate_property_form_view" model="ir.ui.view">
            <field name="name">Real Estate Form View</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="sold_button" type="object" string="Sold" states='draft' attrs="{'invisible': [('state', 'in', ('sold', 'cancel'))]}"/>
                        <button name="cancel_button" type="object" string="Cancel" states='draft' attrs="{'invisible': [('state', 'in', ('sold', 'cancel'))]}"/>
                        <button type="action" name="%(offers_action)d" string="Offers"/>
                        <field name="state" widget="statusbar" options="{'clickable':'1'}"/>
                    </header>
                    <sheet>
                        <widget name="web_ribbon" title="Sold" bg_color="bg-success" attrs="{'invisible': [('state', 'not in', ('sold'))]}"/>
                        <widget name="web_ribbon" title="Cancel" bg_color="bg-danger" attrs="{'invisible': [('state', 'not in', ('cancel'))]}"/>
                        <field name="active" invisible='1'/>
                        <label for="name">Name</label>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        <group>
                            <group>
                                <field name="date_availability"/>
                                <field name="expected_price"/>
                                <field name="property_type_id" options="{'no_create': True}"/>
                                <field name="status"/>
                            </group>
                            <group>
                                <field name="postcode"/>
                                <field name="selling_price"/>
                                <field name="best_offer"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Description">
                                <field name="description"/>
                                <group>
                                    <group>
                                        <field name="facades"/>
                                        <field name="garage"/>
                                        <field name="total_area"/>
                                    </group>
                                    <group>
                                        <field name="bedrooms"/>
                                        <field name="living_area"/>
                                    </group>
                                </group>
                            </page>

                            <page string="Garden">
                                <group>
                                    <group>
                                        <field name="garden"/>
                                        <field name="garden_orientation" attrs="{'invisible': [('garden', '=', False)]}"/>
                                    </group>
                                    <group>
                                        <field name="garden_area" attrs="{'invisible': [('garden', '=', False)]}"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Other Info">
                                <group>
                                    <group>
                                        <field name="salesman_id" widget="many2one_avatar"/>
                                        <field name="buyer_id"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Offers">
                                <field name="offer_ids" attrs="{'readonly': [('state', 'in', ('offer_accepted', 'sold', 'cancel'))]}">
                                    <tree editable="bottom" decoration-success="status == 'accepted'" decoration-danger="status == 'refused'">
                                        <field name="price"/>
                                        <field name="partner_id"/>
                                        <button name="action_accept" title="Accept" type="object" icon="fa-check" attrs="{'invisible': [('status', '!=', False)]}"/>
                                        <button name="action_refuse" title="Refuse" type="object" icon="fa-times" attrs="{'invisible': [('status', '!=', False)]}"/>
                                        <field name="status" optional='hide'/>
                                        <field name="validity"/>
                                        <field name="date_deadline"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
    </data>
</odoo>
