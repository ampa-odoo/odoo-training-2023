<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="estate_property_model_action" model="ir.actions.act_window">
        <field name="name">Real Estate</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">No property found, Please add your property over here</p>
            <p>Use the top left
                <strong>CREATE</strong> button to add new property!!!
            </p>
        </field>
    </record>
    <!--** List view **-->
    <record id="estate_property_model_tree_view" model="ir.ui.view">
        <field name="name">Real Estate List View</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="List View">
                <field name="name"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="garden_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
            </tree>
        </field>
    </record>
    <!--** Form view **-->
    <record id="estate_property_model_form_view" model="ir.ui.view">
        <field name="name">Real Estate Form View</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property">
                <header>
                    <field name="state" widget="statusbar" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <br/>
                    <label for="name" string="Name"/>
                    <h1>
                        <field name="name" string="Name" placeholder="e.g. Cozy Apartment in Ahmedabad"/>
                    </h1>
                    <label for="tag_ids" string="Tags"/>
                    <field name="tag_ids" widget="many2many_tags" string="Tags" options="{'no_quick_create':True,'no_create_edit':True}"/>
                    <br/>
                    <br/>
                    <group>
                        <group>
                            <field name="property_type_id" string="Property Type" options="{'no_quick_create':True,'no_create_edit':True}"/>
                            <field name="state" string="State"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="best_price"/>
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <br/>
                    <notebook>
                        <!-- Description -->
                        <page name="description" string="Description">
                            <br/>
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area"/>
                                <field name="garden_orientation"/>
                                <field name="total_area"/>
                            </group>
                        </page>
                        <!-- Offers -->
                        <page name="offers" string="Offers">
                            <field name="offer_ids" />
                        </page>
                        <!-- Other Info -->
                        <page name="other_info" string="Other Info">
                            <br/>
                            <group>
                                <field name="salesperson_id"/>
                                <field name="buyer_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!--** Search view **-->
    <record id="estate_property_model_search" model="ir.ui.view">
        <field name="name">Estate Property Search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Estate Property Search">
                <field name="name"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="garden_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
                <!-- <field name="context">{"search_default_name_of_the_filter":1}</field> -->
                <filter string="Available" name="available" domain="['|', ('state', '=', 'new'), ('state', '=', 'offer_received')]"/>
                <separator/>
                <filter string="Postcode" name="postcode" context="{'group_by': 'postcode'}"/>
                <separator/>
            </search>
        </field>
    </record>
</odoo>