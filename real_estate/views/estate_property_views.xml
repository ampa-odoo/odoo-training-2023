<?xml version="1.0"?>
  <odoo> 
    <record id="real_estate_view_form" model="ir.ui.view">
    <field name="name">real.estare.view.form</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
        <form>
            <header>
                <button name="sold_action" type="object" string="sold"/>
                <button name="canceled_action" type="object" string="canceled"/>                
            </header> 
            <sheet>             
                 <h1>
                    <field name="name" />                  
                 </h1>              
                 <group>
																	<group>  
																	<field name="tag_ids" widget="many2many_tags" string=""/>
																	</group>                              
                 <group>																		  
                  <field name="postcode"/>
                 </group>
                 <group>
                   <field name="expeccted_price"/>
                 </group>
                 <group>
                   <field name="date_availability"/>
                 </group>
                 <group>
                   <field name="selling_price"/>
                 </group>
                 <group>
                   <field name="best_price"/>																					
                 </group>
																	<group>
																	  <field name="state"/>
																	</group>
                <notebook>
                 <page string="Description">
                 <group>
                  <field name="description"/> 
                  <field name="type_id" options="{'no_quick_create': True, 'no_create_edit' : True}"/>                                                                                                             
                  <field name="living_area"/>                                                
                  <field name="facades"/>                                                
                  <field name="garage"/>                                                
                  <field name="garden"/>
                  <field name="garden_area"/>                                                
                  <field name="total_area"/>
                  <field name="garden_orientation"/>                                              
                  </group> 
                  </page>
                  <page string="offer.">
                    <field name="offer_ids"/>         
                  </page>  
                  <page string="Other Info.">
                    <group>
                       <field name="sales_id"/>                                                
                       <field name="buyer_id"/>
                    </group>   
                   </page>   
             </notebook>
                                    
             </group>
          </sheet>
         </form>
        </field>
    </record>

    <record id="real_estate_view_tree" model="ir.ui.view">
        <field name="name">real.estate.view.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Estate_Property">
                <field name="name"/>
                <field name="postcode"/>
                <field name="expeccted_price"/>
                <field name="date_availability"/>
                <field name="selling_price"/>
                <field name="description"/>
                <field name="type_id"/>
                <field name="tag_ids" widget="many2many_tags"/>
                <field name="bedroom"/>
                <field name="living_area"/>
                <field name="facades"/>
                <field name="garage"/>
                <field name="garden"/>
                <field name="garden_area"/>
                <field name="garden_orientation"/>
                <field name="total_area"/>
                <field name="state"/>
                <field name="sales_id"/>
                <field name="buyer_id"/> 
            </tree>
        </field>
        
    </record>
   
    <record id="real_estate_search" model="ir.ui.view">
              <field name="name">estate.property.search</field>
              <field name="model">estate.property</field>
              <field name="arch" type="xml">
                    <search string="real estate">
                    <field name="name"/>
                    <field name="postcode"/>
                    <field name="expeccted_price"/>
                    <field name="date_availability"/>
                    <field name="selling_price"/>
                    <field name="description"/>
                    <field name="type_id"/> 
                   <!--<field name="tag_id" widget="many2many_tags"/> -->
                    <field name="sales_id"/>
                    <field name="buyer_id"/>
                    <field name="bedroom"/>
                    <field name="living_area"/>
                    <field name="facades"/>
                    <field name="garage"/>
                    <field name="garden"/>
                    <field name="garden_area"/>
                    <field name="garden_orientation"/>
                    <field name="state"/>
                      <separator/>
                      <filter string="price filter" name="expeccted_price" domain="[('expeccted_price', '=', 120000)]"/>
                      <filter string="pin" name="postcode" domain="[('postcode', '!=', 656565)]"/>
                      <filter name="filter_date_availability" date="date_availability" string="available Date"/>
                      <filter name="filter_create_date" date="create_date" string=" Date"/>
                      </search>
              </field>
          </record>
  </odoo>