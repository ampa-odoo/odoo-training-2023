<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_property_model_action" model="ir.actions.act_window">
        <field name="name">Real Estate</field>
        <field name="res_model">estate.property.model</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define a new lost reason
            </p>
        </field>
    </record>

    <record id="estate_property_list_view" model="ir.ui.view">
       <field name="name">Estate Property List View</field>
       <field name="model">estate.property.model</field>
       <field name="arch" type="xml">
            <tree string="Channel" >
                <field name="name"/>
                <field name="description"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="date_availability"/>
                <field name="description"/>
                <field name="living_area"/>
                <field name="expected_price"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_form_view" model="ir.ui.view">

        <field name="name">Estate Property Form View</field>
        <field name="model">estate.property.model</field>
        <field name="arch" type="xml">

            <form string="test">
                <sheet>
                    <h1> 
                        <field name="name" />
                    </h1>
                    <br/>
                    <group>
                        <group> <field name="postcode"/></group>
                        <group> <field name="date_availability"/></group>
                    </group>
                    <group>
                        <group> <field name="expected_price"/></group>
                        <group> <field name="selling_price" string="selling price"/></group>
                        
                    </group>

                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area"/>
                                <field name="garden_orientation"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    
    
</odoo>