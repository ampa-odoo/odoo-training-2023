<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.properties</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="estate_property_type_action" model="ir.actions.act_window">
        <field name="name">Property Type</field>
    <record id="estate_property_tree_view" model="ir.ui.view">
        <field name="name">property</field>
        <field name="model">estate.properties</field>
        <field name="arch" type="xml">
            <tree string="Real estate">
                <field name="name"/>
                <field name="description"/>
                <field name="postcode"/>
                <field name="date_availability"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <field name="garage"/>
                <field name="garden"/>
                <field name="garden_area"/>
                <field name="garden_orientation"/>
                <field name="active"/>
                <field name="state"/>
            </tree>
        </field>
    </record> 
    <record id="estate_property_form_view" model="ir.ui.view">
        <field name="name">New property</field>
        <field name="model">estate.properties</field>
        <field name="arch" type="xml">
            <form string="Real estate">
                <sheet>
                    <h1>
                        <field name="name" placeholder="Enter Property Name"/>
                    </h1>
                    <group>
                        <group>
                            <field name="postcode"/>
                        </group>
                        <group>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                        </group>
                        <group>
                            <field name="selling_price"/>
                        </group>
                        <group>
                            <field name="state"/>
                        </group>
                    <notebook>
                        <page name="description">
                            <group>
                                <field name="description"/>
                            </group>
                            <group>
                                <field name="bedrooms"/>
                            </group>
                            <group>
                                <field name="living_area"/>
                            </group>
                            <group>
                                <field name="facades"/>
                            </group>
                            <group>
                                <field name="garage"/>
                            </group>
                            <group>
                                <field name="garden"/>
                            </group>
                            <group>
                                <field name="garden_area"/>
                            </group>
                            <group>
                                <field name="garden_orientation"/>
                            </group> 
                        </page>
                    </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="real_estate_search_view" model="ir.ui.view">
        <field name="name">Real Estate Search</field>
        <field name="model">estate.properties</field>
        <field name="arch" type="xml">
            <search string="real estate search">
                <field name="name"/>
                <field name="description"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="living_area"/>
                <field name="facades"/>
                    <filter string="Pincode" name="group_by_pincode" context="{'group_by':'postcode'}"/>
                    <filter string="Bedrooms" name="group_by_bedrooms" context="{'group_by':'bedrooms'}"/>
                    <filter string="Available" name="available properties" domain="['|',('state', '=', 'new'),('state','=','offer_received')]"/>
            </search>
        </field>
    </record>
</odoo>
