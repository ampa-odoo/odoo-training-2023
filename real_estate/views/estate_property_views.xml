<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="property_list_action" model="ir.actions.act_window">
            <field name="name">Property List</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="setting_action1" model="ir.actions.act_window">
            <field name="name">Property Types</field>
            <field name="res_model">estate.property.type</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="setting_action2" model="ir.actions.act_window">
            <field name="name">Property Tags</field>
            <field name="res_model">estate.property.tag</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="model_view_tree" model="ir.ui.view">
            <field name="name">Real Estate Tree</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <tree expand="1">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="postcode"/>
                    <field name="date_availability"/>
                    <field name="expected_price"/>
                    <field name="selling_price"/>
                    <field name="bedrooms" optional="hide"/>
                    <field name="living_area" optional='hide'/>
                    <field name="facades" optional='hide'/>
                    <field name="garage" optional='hide'/>
                    <field name="garden" optional='hide'/>
                    <field name="garden_area" optional='hide'/>
                    <field name="garden_orientation" optional='hide'/>
                </tree>
            </field>
        </record>

        <record id="model_view_search" model="ir.ui.view">
            <field name="name">Real Estate Search</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name="name"/>
                    <field name="last_seen"/>
                    <filter string="Archived" name="active" domain="[('active', '=', False)]"/>
                    <separator/>
                    <filter string="Selling Price" name="selling_price" domain="[('selling_price', '&lt;', 200)]"/>
                    <group expand="1" string="Group By">
                        <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}"/>
                        <separator/>
                        <filter string="Creation Date" name="date_availability" context="{'group_by':'create_date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="model_view_form" model="ir.ui.view">
            <field name="name">Real Estate Form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar" options="{'clickable':'1'}"/>
                    </header>
                    <sheet>
                        <label for="name">Name</label>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <field name="tag_ids" widget="many2many_tags"/>
                        <group>
                            <group>
                                <field name="date_availability"/>
                                <field name="expected_price"/>
                                <field name="property_type_id"/>
                            </group>
                            <group>
                                <field name="postcode"/>
                                <field name="selling_price"/>
                                <field name="best_offer"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Description">
                                <field name="description"/>
                                <group>
                                    <group>
                                        <field name="facades"/>
                                        <field name="garage"/>
                                        <field name="total_area"/>
                                    </group>
                                    <group>
                                        <field name="bedrooms"/>
                                        <field name="living_area"/>
                                    </group>
                                </group>
                            </page>

                            <page string="Garden">
                                <group>
                                    <group>
                                        <field name="garden"/>
                                        <field name="garden_orientation"/>
                                    </group>
                                    <group>
                                        <field name="garden_area"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Other Info">
                                <group>
                                    <group>
                                        <field name="salesman_id"/>
                                        <field name="buyer_id"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Offers">
                                <field name="offer_ids">
                                    <tree>
                                        <field name="price"/>
                                        <field name="partner_id"/>
                                        <field name="status" optional='hide'/>
                                        <field name="validity"/>
                                        <field name="date_deadline"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
