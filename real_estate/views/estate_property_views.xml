<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_property_model_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property.model</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_state': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define a new lost reason
            </p>
        </field>
    </record>

    <record id="estate_property_list_view" model="ir.ui.view">
       <field name="name">Estate Property List View</field>
       <field name="model">estate.property.model</field>
       <field name="arch" type="xml">
            <tree string="Channel" default_order="name desc"  decoration-success="state in ('offer_recieved','offer_accepted')" decoration-bf="state in ('offer_accepted')" decoration-muted="state in ('sold')">
                <field name="name" string="Title"/>
                <field name="postcode"/>
                <field name="bedrooms" string="Bedrooms"/>
                <field name="living_area" string="Living Area (sqm)"/>
                <field name="tag_ids" string="Tags" widget="many2many_tags" options="{'color_field':'color'}"/>
                <field name="expected_price"/>
                <field name="selling_price" string="Selling Price"/>    
                <field name="date_availability" string="Available From" optional="hidden"/>
                <field name="state" string="Status"/>  
                <!-- optional="hidden" -->
            </tree>
        </field>
    </record>

    <record id="estate_property_form_view" model="ir.ui.view">

        <field name="name">Estate Property Form View</field>
        <field name="model">estate.property.model</field>
        <field name="arch" type="xml">

            <form string="test">
                <!-- <header>
                    <field name="state" widget="statusbar" options="{'clickable': '1'}" />
                </header> -->
                <header>
                    <button name="perform_cancel" type="object" string="Cancel" states="new,offer_recieved,offer_accepted"/>
                    <button name="perform_sold" type="object" string="Sold" states="new,offer_recieved,offer_accepted"/>
                    <field name="state" widget="statusbar" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <h1> 
                        <field name="name" />
                    </h1>
                    <br/>
                    <field name="tag_ids"  widget="many2many_tags" options="{'color_field':'color'}"/>    
                    <br/>
                    <group>
                        <group> <field name="postcode"/></group>
                        <group> <field name="date_availability"/></group>
                        <!-- <group> <field name="offer_ids.offer_count"/></group> -->
                    </group>
                    <group>
                        <group> <field name="expected_price"/></group>
                        <group> <field name="selling_price" string="selling price"/></group>
                        <field name="state" string="Status"/>
                    </group>
                    <group>
                        <group><field name="type_id" options="{'no_create': True , 'no_open':True}"/></group>
                        <group><field name="best_price"/></group>
                    </group>

                    <notebook>
                        <page string="Description">
                                <group>
                                    <field name="description" string="Description"/>
                                    <field name="bedrooms" string="Bedrooms"/>
                                    <field name="living_area" string="Living Area"/>
                                    <field name="facades" string="Facades"/>
                                    <field name="garage" string="Garage"/>
                                    <field name="garden" string="Garden"/>
                                    
                                    <field name="garden_area" string="Garden Area" attrs="{'invisible': [('garden', '=', False)]}"/>
                                    <field name="garden_orientation" string="Garden Orientation" attrs="{'invisible': [('garden', '=', False)]}"/>
                                    <field name="total_area" string="Total Area"/>
                                </group>
                        </page>
                        <page string="Offers">
                           <field name="offer_ids" attrs="{'readonly':[('state','in',('offer_accepted','sold','cancled'))]}"/>
                        </page>
                         <page string="Other Info">
                            <group>
                                <field name="buyer_id" string="Buyer" />
                                <field name="salesperson_id" string="Salesperson" />
                            </group>
                         </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_search_view" model="ir.ui.view">
        <field name="name">Estate Property Form View</field>
        <field name="model">estate.property.model</field>
        <field name="arch" type="xml">
            <search  string="Search View">
                <field name="name" string="Title"/>
                <field name="postcode" string="Postcode"/>
                <field name="expected_price" string="Expected Price"/>
                <field name="bedrooms" string="Bedrooms"/>
                <field name="living_area" string="Living Area (sqm)" filter_domain="[('living_area','>=',self)]"/>
                <field name="facades" string="Facades"/>
                <filter string="Available" name="state"  domain="[('state', 'in' , ['new','offer_recieved'])]"/>
                <group expand="1" string="Group By">
                    <filter string="Postcode" name="postcode" context="{'group_by':'postcode', 'residual_visible':True}"/>
                </group>
            </search>
        </field>
    </record>


    
    
</odoo>