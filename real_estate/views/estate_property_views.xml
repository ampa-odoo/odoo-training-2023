<?xml version="1.0" encoding="UTF-8"?>
<odoo>

<!--tree view_mode -->

     <record id="real_estate_view_tree" model="ir.ui.view">
        <field name="name">real.estate.view.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Estate_Property">
                <!-- <field name="property_type_id"/> -->
                <field name="name"/>
                <field name="description"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="date_availability"/>
                <field name="status" widget="badge"/>
                <!-- <field name="property_tag_ids" widget="badge"/> -->
            </tree>
        </field>
    </record>
<!-- form view -->

    <record id="real_estate_view_form" model="ir.ui.view">
        <field name="name">real.estate.view.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Estate_Property">
                <header>                                            
                    <field name="status" widget="statusbar" statusbar_colors='{"sold":"green","offer cancelled":"red"}' options="{'clickable':'1'}"></field>
                </header>    
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <field name="property_tag_ids" widget="many2many_tags" options="{'cozy': 'red'}"/>
                            <group>
                                <group>
                                    <field name="property_type_id" options="{'no_quick_create': True, 'no_create_edit' : True}"/>            
                                </group>
                                <group>
                                    <field name="postcode"/>
                                </group>
                                <group>
                                    <field name="expected_price"/>
                                </group>

                                <group>
                                    <field name="date_availability"/>
                                </group>
                                <group>
                                    <field name="selling_price"/>
                                </group>

                                    <notebook>
                                        <page string="Description">
                                            <group>
                                                <field name="description"/>
                                            </group>
                                            <group>
                                                <field name="bedrooms"/>
                                            </group> 
                                            <group>
                                                <field name="living_area"/>
                                            </group>  
                                             <group>
                                                <field name="facades"/>
                                            </group>  
                                             <group>
                                                <field name="garage"/>
                                            </group> 
                                             <group>
                                                <field name="garden"/>
                                            </group>  
                                             <group>
                                                <field name="garden_area"/>
                                            </group>  
                                             <group>
                                                <field name="garden_orientation"/>
                                            </group>   
                                                                        
                                        </page>

                                        <page string="offers">
                                            <field name="offer_ids"/>
                                            
                                        </page>

                                        <page string="other information">
                                            <group>
                                                <field name="salesperson"/>
                                            </group>
                                            <group>
                                                <field name="buyer"/>
                                            </group>
                                        </page>
                                    </notebook>
                                
                            </group>
                </sheet>
            </form>
        </field>
    </record>


<!-- Search view -->
        <record id="real_estate_search_view" model="ir.ui.view">
            <field name="name">real.estate.search.view</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <search string="Estate Property">
                    <field name="name"/>
                    <field name="bedrooms"/>
                    <field name="description"/>
                    <field name="date_availability"/>
                    <separator/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    <filter string="status" name="status" domain="[('expected_price','>',1000000),'|',('status','=','offer received'),('status','=','New')]"/>
                    <group expand="1" string="Group By">
                        <filter string="Property name" name="name" context="{'group_by':'name'}"/>
                        <filter string="Bedrooms" name="bedrooms" context="{'group_by':'bedrooms'}"/>
                    </group>
                </search>
            </field>
        </record>
</odoo>