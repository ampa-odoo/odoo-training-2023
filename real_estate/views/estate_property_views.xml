<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="real_estate_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">real.estate.properties</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a New Property Using CREATE Button!!
            </p>
           </field>
    </record>

    <record id="real_estate_view_tree" model="ir.ui.view">
        <field name="name">Proper</field>
        <field name="model">real.estate.properties</field>
        <field name="arch" type="xml">
            <tree string="real_estate">
                
                    <field name="name" />
                    <field name="description" />
                    <field name="postcode" />
                    <field name="date_availability" />
                    <field name="expected_price" />
                    <field name="selling_price" />
                    <field name="bedrooms" />
            </tree>
        </field>
    </record>

    <record id="real_estate_view_form" model="ir.ui.view">
        <field name="name">Property_form</field>
        <field name="model">real.estate.properties</field>
        <field name="arch" type="xml">
            <form string="real_estate_form">
                <header>
                    <field name="state" widget="statusbar" options="{'clickable' : 1}"/>
                </header>
                <sheet>
                    <h1><field name="name" placeholder="Enter Property Name"/></h1>
                    <group>
                        <group>
                            <field name="tag_ids" widget="many2many_tags"/>
                        </group> 
                        <group>
                            <field name="postcode"/>
                        </group>
                        <group>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                        </group>
                        <group>
                            <field name="selling_price"/>
                        </group>
                        <group>
                            <field name="state"/>
                        </group>
                        <group>
                            <field name="type_id"/>
                        </group>
                        <group>
                            <field name="best_offer"/>
                        </group>
                    
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description"/>
                                </group>
                                <group>
                                    <field name="bedrooms"/>
                                </group>
                                <group>
                                    <field name="living_area"/>
                                </group>
                                <group>
                                    <field name="facades"/>
                                </group>
                                <group>
                                    <field name="garage"/>
                                </group>
                                <group>
                                    <field name="garden"/>
                                </group>  
                                <group>
                                    <field name="garden_area"/>
                                </group> 
                                <group>
                                    <field name="garden_orientation"/>
                                </group>
                                <group>
                                    <field name="total_area"/>
                                </group>
                                
                            </page>
                            <page string="Other Details">
                                <group>
                                    <field name="user_id"/>
                                </group>
                                <group>
                                    <field name="partner_id"/>
                                </group>
                            </page>   
                       
                            <page string="Offers">
                                <group>
                                    <field name="offer_ids"/>
                                </group>
                            </page>   
                            </notebook>

                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="real_estate_view_search" model="ir.ui.view">
        <field name="name">Property_search</field>
        <field name="model">real.estate.properties</field>
        <field name="arch" type="xml">
            <search string="real_estate_search">
                <field name="name"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <separator/>
                    <filter string="Available" name="Available" domain="[('active', '=', False)]"/>
                <separator/>   
                <group expand="1" string="Group By">
                    <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}"/>
                </group>
            </search>
        </field>
    </record>

</odoo> 