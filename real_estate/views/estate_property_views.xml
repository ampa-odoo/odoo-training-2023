<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Estate</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">No property found!</p>
            <p>Use the top left
                <strong>CREATE</strong> button to add new property!!!
            </p>
        </field>
    </record>


    <!-- Creating tree/list view -->
    <record id="estate_property_tree_view" model="ir.ui.view">
        <field name="name">estate_tree_view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" string="Title"/>
                <field name="postcode"/>
                <field name="property_type_id" string="Property Type"/>
                <field name="bedrooms"/>
                <field name="living_area" string="Living Area (sqm)"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
            </tree>
        </field>
    </record>

    <!-- creating form view -->
    <record id="estate_property_form_view" model="ir.ui.view">
        <field name="name">estate_form_view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" options="{'clickable' : 1}"/>
                </header>
                <sheet>
                    <h1><field name="name" string="Name" default="New Property" placeholder="For Say : Name of the Property"/></h1>
                    

                    <group>
                        <group>
                            <field name="property_type_id" string="Property Type" />
                        </group>
                        <group>
                            <field name="expected_price"/>
                        </group>
                        <br/>
                    </group>

                    <group>
                        <group>
                            <field name="postcode" />
                        </group>
                        <group>
                            <field name="selling_price"/>
                        </group>
                    </group>

                    <group>
                        <group><field name="date_availability" string="Available From"/></group>
                    </group>
                    
                    
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description" />
                            </group>
                            <group>
                                <group>
                                    <field name="living_area" string="Living Area (sqm)" />
                                </group>
                                <group class="oe_right">
                                    <field name="bedrooms" />
                                </group>
                            </group>
                            
                            <group>
                                <group>
                                    <field name="facades"/>
                                </group>
                                <group class="oe_right">
                                    <field name="garage" />
                                </group>
                            </group>

                            <group>
                                <group>
                                    <field name="garden" />
                                </group>
                                <group class="oe_right">
                                    <field name="garden_area" string="Garden Area (sqm)" />
                                </group>
                            </group>
                            
                            <group>
                                <group>
                                    <field name="garden_orientation" />
                                </group>
                                <group>
                                    <field name="state" />
                                </group>
                            </group>
                                    
                        </page>
                        <page string="Other Info">
                            <group>
                                <group>
                                    <field name="seller_id" string="Salesman"/>
                                    <field name="buyer_id" string="Buyer" />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <!-- Creating search view -->
    <record id="estate_property_search" model="ir.ui.view">
        <field name="name">Estate Property Search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Title"/>
                <field name="postcode" />
                <field name="expected_price" />
                <field name="bedrooms" />
                <field name="living_area" />
                <field name="facades" />
                <field name="property_type_id"/>
            <!-- Adding a filter which will show available properties for buying -->
                <filter string="Available" name="new_property" domain = "[('state', '=', 'new')]" />
                <filter string="Garden" name="with_garden" domain="[('garden', '=', True)]"/>
                <group>
                    <filter name="postcode" string="Postcode" context="{'group_by' : 'postcode'}" />
                    <separator />
                    <filter name="bedrooms" string="No of Bedrooms" context="{'group_by' : 'bedrooms'}" />
                </group>
            </search>
            
        </field>
    </record>
</odoo>
