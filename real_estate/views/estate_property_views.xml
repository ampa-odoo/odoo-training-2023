<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="property_list_action" model="ir.actions.act_window">
            <field name="name">Property list</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="contact_us_action" model="ir.actions.act_window">
            <field name="name">Help</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="model_view_tree" model="ir.ui.view">
            <field name="name">Real Estate</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="postcode"/>
                    <field name="date_availability"/>
                    <field name="expected_price"/>
                    <field name="selling_price"/>
                    <field name="bedrooms" optional="hide"/>
                    <field name="living_area" optional='hide'/>
                    <field name="facades" optional='hide'/>
                    <field name="garage" optional='hide'/>
                    <field name="garden" optional='hide'/>
                    <field name="garden_area" optional='hide'/>
                    <field name="garden_orientation" optional='hide'/>
                </tree>
            </field>
        </record>
        <record id="model_view_form" model="ir.ui.view">
            <field name="name">Real Estate Form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar" options="{'clickable':'1'}"></field>
                    </header>
                    <sheet>
                        <label for="name">Name</label>
                        <h1>
                            <field name="name"></field>
                        </h1>
                        <group>
                            <group>
                                <field name="date_availability"></field>
                                <field name="expected_price"></field>

                            </group>
                            <group>
                                <field name="postcode"></field>
                                <field name="selling_price"></field>

                            </group>
                        </group>

                        <notebook>
                            <page string="Description">
                                <field name="description"></field>
                                <group>
                                    <group>
                                        <field name="facades"></field>
                                        <field name="garage"></field>
                                    </group>
                                    <group>
                                        <field name="bedrooms"></field>
                                        <field name="living_area"></field>
                                    </group>
                                </group>

                            </page>
                            <page string="Garden">
                                <group>
                                    <group>
                                        <field name="garden"></field>
                                        <field name="garden_orientation"></field>
                                    </group>
                                    <group>
                                        <field name="garden_area"></field>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>