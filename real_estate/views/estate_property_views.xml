<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="real_estate_list_view" model="ir.ui.view">
        <field name="name">Real Estate List View</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Real Estate">
                <field name="name"/>
                <field name="description"/>
                <field name="expected_price" optional="show"/>
            </tree>
        </field>
    </record>

    <record id="real_estate_form_view" model="ir.ui.view">
        <field name="name">Real Estate Form View</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_property_sold" string="Sold" type="object" />
                    <button name="action_property_cancel" string="Cancel" type="object" />
                    <field name="state" widget="statusbar" options="{'clickable':'1'}" />
                </header>
                <sheet>
                    <label for="name" string="Name"/>
                    <h1><field name="name"/></h1>
                    <field name="tag_ids" widget="many2many_tags" />
                    <group>
                        <group>
                            <field name="property_type_id" />
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="best_offer" />
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                            <label for="description" string="Description"/>
                                <field name="description"/>
                                <group>
                                    <field name="bedrooms"/>
                                    <field name="living_area" string="Living Area (sqm)"/>
                                    <field name="garage"/>
                                    <field name="facades"/>
                                    <field name="total_area"/>
                                </group>
                            </group>
                        </page>
                        <page string="Garden">
                            <group>
                                <field name="garden"/>
                                <field name="garden_area" string="Garden Area (sqm)"/>
                                <field name="garden_orientation"/>
                            </group>
                        </page>
                        <page string="Offer">
                            <field name="offer_ids" string="offers"/>                                
                        </page>
                        <page string="Other info">
                            <group>
                                <field name="salesperson_id" widget="many2one_avatar_user"/>
                                <field name="buyer_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="real_estate_search_view" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Available">
                <field name="name" string="Title"/>
                <field name="postcode" string="Postcode" />
                <field name="expected_price" string="Expected Price" />
                <field name="bedrooms" string="Bedrooms" />
                <field name="living_area" string="Living Area (sqm)" />
                <field name="facades" string="Facades" />
                <separator />
                <filter string="Available" name="name" domain="['|',('state', '=', 'new'),('state', '=', 'offer_received')]" />
                <group expand="1" string="Postcode">
                    <filter string="Postcode" name="name" context="{'group_by':'postcode'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>
