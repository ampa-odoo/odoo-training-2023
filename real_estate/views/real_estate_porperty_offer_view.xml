<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- FOR TREE VIEW -->
    <record id="real_estate_property_offer_view_tree" model="ir.ui.view">
        <field name="name">real_estate_property_Offer_tree_view</field>
        <field name="model">real.estate.property.offer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="price"/>
                <field name="partner_id"/>
                <field name="property_id"/>
                <field name="status"/>
                <button name="action_confirm" title='Accepted' type="object" icon="fa-check"/>
                <button name="action_cancel" title='Refuse' type="object" icon="fa-times"/>
                <field name="date_deadline" />
                <field name="validity" />
                <!-- <field name="create_date" /> -->
            </tree>
        </field>
    </record>
    <record id="real_estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">real_estate_property_Offer_form_view</field>
        <field name="model">real.estate.property.offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="price" />
                        <field name="partner_id" />
                        <field name="status" />
                        <field name="date_deadline" />
                        <field name="validity" />
                        <field name="create_date" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>