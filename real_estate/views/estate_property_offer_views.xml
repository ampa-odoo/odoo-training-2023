<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="real_estate_offer_list_view" model="ir.ui.view">
        <field name="name">Real Estate Offer List View</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <!-- editable="bottom" to edit inline -->
            <tree string="Offers">
                <field name="price"/>
                <field name="partner_id" />
                <field name="validity"/>
                <field name="date_deadline"/>
                <button name="action_offer_accepted" title="Accept" icon="fa-check" type="object" />
                <button name="action_offer_rejected" title="Reject" icon="fa-times" type="object" />
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="real_estate_offer_form_view" model="ir.ui.view">
        <field name="name">Real Estate Offer Form View</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="partner_id" />
                        <field name="validity"/>
                        <field name="date_deadline"/>
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
