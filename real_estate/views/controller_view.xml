<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data>
        <record id="property_menu" model="website.menu">
            <field name="name">Real Estate</field>
            <field name="parent_id" search="[('parent_id','=',False),('website_id','=',1)]"/>
            <field name="website_id" ref="website.default_website"/>
        </record>
        <record id="property_sub_menu" model="website.menu">
            <field name="name">Properties</field>
            <field name="url">controller/controller</field>
            <field name="parent_id" ref="real_estate.property_menu"></field>
            <field name="website_id" ref="website.default_website"></field>
        </record>
        <template id="property_view">
            <t t-call="website.layout">
                <t t-set="title">Real Estate</t>
                <div class="oe_structure">
                    <div class="container ">
                        <div class='row row-cols-3 justify-content-center'>
                            <t t-foreach="properties" t-as="estate">
                                <div class="card m-3" style="width: 20rem; border-radius: 2em; text-align: center;box-shadow: 0 5px 10px rgba(0,0,0,.2);">
                                    <img t-attf-src="data:image/*;base64,{{estate.image}}" class="card-img-top mt-3" alt="hello" style="width: 65%;
                                        border-radius: 25%;
                                        margin: 0 auto;
                                        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);" />
                                    <div class="card-body">
                                        <h5 class="card-title" style="font-weight: 700; font-size: 1.5em;">
                                            <t t-esc="estate.name"/>
                                        </h5>
                                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                                        <a t-attf-href="/controller/{{ slug(estate) }}" class="btn btn-primary" style="border-radius:2em;
                                        background-color: teal;
                                        color: #ffffff;
                                        padding: .5em 1.5em;  background-color: rgba(0, 128, 128, 0.7);
                                        color: #ffffff;
                                        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);">Go Checkout</a>
                                    </div>
                                    <div>
                                    <span class="float-end badge rounded-pill bg-secondary fa fa-coffee" t-field="estate.tag_ids"></span>
                                </div>
                                    <!-- <div class="card-footer">
                                        <small class="text-muted">Last modified: <i t-field="estate.write_date" />
                                        </small>
                                    </div> -->
                                </div>
                            </t>
                        </div>
                    </div>
                </div>
                <div t-if="pager" class="o_portal_pager d-flex justify-content-center">
                    <t t-call="website.pager"/>
                </div>
            </t>
        </template>


        <template id="property_list_view">
            <t t-call="website.layout">
                <t t-set="title">Property list views</t>
                <div class="oe_structure"/>
                <div class="oe_structure">
                    <div class="container">
                        <div class="card m-3" style="width: 20rem; border-radius: 2em; text-align: center;box-shadow: 0 5px 10px rgba(0,0,0,.2);">
                            <img t-attf-src="data:image/*;base64,{{person.image}}" class="card-img-top mt-3" alt="hello" style="width: 65%;
                                        border-radius: 25%;
                                        margin: 0 auto;
                                        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);" />
                            <div class="card-body">
                                <h5 class="card-title">
                                    <h3 t-field="person.name"/>
                                </h5>
                                <p class="card-text">
                                    <p> 
                                        <t t-esc = "person.description"/>
                                    </p> 

                                    <p> Bedrooms :
                                        <t t-esc = "person.bedrooms"/>
                                    </p>
                                    <p> Expected Price :
                                        <t t-esc = "person.expected_price"/>
                                    </p>
                                    <p> Selling Price :
                                        <t t-esc = "person.selling_price"/>
                                    </p>
                                </p>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
            </t>
        </template>


    </data>
</odoo>