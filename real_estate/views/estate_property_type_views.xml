<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="real_estate_type_action" model="ir.actions.act_window">
        <field name="name">Type</field>
        <field name="res_model">real.estate.property.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a New Property Using CREATE Button!!
            </p>
        </field>
    </record>

    <record id="property_type_tree_view" model="ir.ui.view">
        <field name="name">Property Type</field>
        <field name="model">real.estate.property.type</field>
        <field name="arch" type="xml">
            <tree string="Property type">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="real_estate_view_form4" model="ir.ui.view">
        <field name="name">Property type form</field>
        <field name="model">real.estate.property.type</field>
        <field name="arch" type="xml">
            <form string="real_estate_form">
                
                <sheet>
                    <h1><field name="name" placeholder="Enter Property Type"/></h1>
                        <group>
                            <field name="description"/>
                             
                        </group>  
                        <notebook>
                            <page name="Properties" string="Properties">
                            <field name="property_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="expected_price"/>
                                    <field name="state"/>
                                   
                                </tree>
                            </field>
                        </page>
                        </notebook> 
                   
                </sheet>
            </form>
        </field>
    </record>
</odoo>