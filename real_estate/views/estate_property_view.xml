<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="real_estate_model_action" model="ir.actions.act_window">
            <field name="name">Real Estate</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">list,form</field>
        </record>
        <record id="estate_model_action" model="ir.actions.act_window">
            <field name="name">Task 1</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">list,form</field>
        </record>
        <record id="estate_model_action_property_type" model="ir.actions.act_window">
            <field name="name">Property Types</field>
            <field name="res_model">estate.property.type</field>
            <field name="view_mode">list,form</field>
        </record>
        <record id="estate_model_action_property_tags" model="ir.actions.act_window">
            <field name="name">Property Tags</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="estate_model_action_help" model="ir.actions.act_window">
            <field name="name">Help</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">list,form</field>
        </record>


        <record id="estate_view_tree" model="ir.ui.view">
            <field name="name">Real Estate</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <tree expand="1" string="Real Estate">
                    <field name="name"></field>
                    <field name="postcode" />
                    <field name="bedrooms" />
                    <field name="living_area"></field>
                    <field name="expected_price"></field>
                    <field name="selling_price"></field>
                    <field name="date_availability"></field>
                    <field name="garden_area" optional='hide'></field>
                </tree>
            </field>
        </record>

        <record id="estate_view_form" model="ir.ui.view">
            <field name="name">Real Estate</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form string="Real Estate">
                    <header>
                        <field name="state" widget="statusbar" options = "{'clickable': '1'}"></field>
                    </header>
                    <sheet>
                        <label for="name" string="Name" />
                        <h1>
                            <field name="name" placeholder="Name"></field>
                        </h1>

                        <group>
                            <group>
                                <field name="date_availability"></field>
                            </group>
                            <group>
                                <field name="postcode"></field>
                            </group>
                        </group>
                        <!-- <br></br> -->
                        <group>
                            <group>
                                <field name="expected_price"></field>
                            </group>
                            <group>
                                <field name="selling_price"></field>
                            </group>
                        </group>

                        <notebook>
                            <page string="Description">
                                <group>
                                    <group>
                                        <field name="garage"></field>
                                    </group>
                                    <group>
                                        <field name="facades"></field>
                                    </group>
                                </group>
                                <group>
                                    <group>
                                        <field name="bedrooms"></field>
                                    </group>
                                    <group>
                                        <field name="living_area"></field>
                                    </group>
                                </group>
                                <group>
                                    <group>
                                        <field nolabel='0' name="description"
                                            placeholder="Description"></field>
                                    </group>

                                </group>

                            </page>
                            <page string="Garden">

                                <group>
                                    <group>
                                        <field name="garden"></field>
                                    </group>
                                    <group>
                                        <field name="garden_area"></field>
                                    </group>
                                </group>
                                <group>
                                    <group>
                                        <field name="garden_orientation"></field>
                                    </group>
                                </group>
                            </page>
                            <!-- <page string="Other Info">
                                <group>
                                    <group>
                                        <field name="Salesman"></field>
                                    </group>
                                    
                                </group>
                                <group>
                                    <group>
                                        <field name="Buyer"></field>
                                    </group>
                                </group>
                            </page> -->
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="estate_view_search" model="ir.ui.view">
            <field name="name">Real Estate</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <search string="Real_Estate">
                    <field name="name"></field>
                    <field name="postcode"></field>
                    <field name="expected_price"></field>
                    <field name="bedrooms"></field>
                    <field name="living_area"></field>
                    <field name="description"></field>
                    <field name="facades"></field>
                    
                    <separator/>
                    <filter string="Active" name="active" domain="[('garage', '=', True)]" />
                    <filter string="Test" name="active" domain="['&amp;' , ('bedrooms', '&gt;', 2),('bedrooms', '&lt;', 10)]" />
                    <filter string="Less than 5 rooms" name="bedrooms" domain="[('bedrooms', '&lt;', 5)]" />
                    <group string="Group By">
                        <filter string="Bed Rooms" name="bedrooms" context="{'group_by':'bedrooms'}" />
                        <filter string="Name" name="name" context="{'group_by':'name'}" />
                        <filter name="selling_price" string="Selling Price"
                            context="{'group_by':'selling_price'}" />
                        <filter name="expected_price" string="Expected Price"
                            context="{'group_by':'expected_price'}" />
                    </group>
                    <searchpanel>
                        <field name="state" icon="fa-users"/>
                        
                      </searchpanel>
                </search>       
            </field>
        </record>

    </data>
</odoo>