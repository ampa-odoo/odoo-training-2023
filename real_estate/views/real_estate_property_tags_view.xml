<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_real_estate_property_tags_search" model="ir.ui.view">
        <field name="name">real_estate_property_tags</field>
        <field name="model">real.estate.property.tags</field>
        <field name="arch" type="xml">
            <search string="Properties">
                <field name="name"  string="Title"/>
            </search>
        </field>
    </record>
    <!-- FOR TREE VIEW -->
    <record id="real_estate_property_tags_view_tree" model="ir.ui.view">
        <field name="name">real_estate_property_tags</field>
        <field name="model">real.estate.property.tags</field>
        <field name="arch" type="xml">
            <tree string="Channel" editable="top">
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="real_estate_property_tags_view_form" model="ir.ui.view">
        <field name="name">real_estate_property_tags</field>
        <field name="model">real.estate.property.tags</field>
        <field name="arch" type="xml">
            <form string="Property">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="color" widget="color_picker" options="{'color_field': 'color'}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="real_estate_property_tags_model_action" model="ir.actions.act_window">
        <field name="name">Property Tags</field>
        <field name="res_model">real.estate.property.tags</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new property type, the first step of a new project!
            </p>
            <p>
                Once the property type is confirmed by the customer, it becomes a type.
                <br/> You will be able to create an invoice and collect the payment.
            </p>
        </field>
    </record>
</odoo>