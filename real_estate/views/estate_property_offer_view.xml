<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="estate_offer_view_tree" model="ir.ui.view">
            <field name="name">Offers</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <tree expand="1" string="Offer" decoration-success="status == 'accepted'"
                    decoration-danger="status == 'refused'">
                    <field name="property_id"></field>
                    <field name="partner_id" />
                    <field name="price" />
                    <field name="status"></field>
                    <field name="validity"></field>
                    <field name="property_type_id"></field>
                    <field name="date_deadline"></field>
                    <field name="create_date"></field>
                </tree>
            </field>
        </record>

        <record id="property_offer_view_form" model="ir.ui.view">
            <field name="name">property.offer.view.form</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <form string="Property offer">
                    <sheet>
                        <label for="property_id" string="Name" />
                        <h1>
                            <field name="property_id" placeholder="Name"></field>
                        </h1>

                        <group>
                            <group>
                                <field name="price"></field>
                            </group>
                            <group>
                                <field name="status"></field>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="partner_id"></field>
                            </group>
                            <group>
                                <field name="validity"></field>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="date_deadline"></field>
                            </group>
                            <group>
                                <field name="create_date"></field>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="property_type_id"></field>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>