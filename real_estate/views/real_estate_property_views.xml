<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- FOR SEARCHING -->
    <record id="view_real_estate_property_search" model="ir.ui.view">
        <field name="name">real_estate_search_module</field>
        <field name="model">real.estate.property</field>
        <field name="arch" type="xml">
            <search string="Properties">
                <field name="name" string="Title"/>
                <field name="postcode"/>
                <field name="property_type_id"/>
                <!-- <field name="description"/> -->
                <!-- <field name="date_availability"/> -->
                <field name="expected_price"/>
                <!-- <field name="selling_price"/> -->
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <field name="property_type_id"/>
                <field name="tag_ids" widget="many2many_tags"/>
                <!-- <field name="garage"/>
                <field name="garden_orientation"/>
                <field name="state"/> -->
                <separator/>
                <filter string="Archived" name="active" domain="[('active', '=', False)]"/>
                <filter string="bedrooms" name="bedrooms" domain="[('bedrooms', '&gt;', 0 )]"/>
                <filter string="Garage" name="garage" domain="[('garage', '=', True)]"/>
                <!-- <filter name="state" string="State" domain="['|',('state', '=', 'new') ,('state' ,'=', 'offer_accepted')]" /> -->
                <filter name="state" string="State" domain="['|',('state', '=', ['new' , 'offer_accepted'])]" />
                <filter string="Garden" name="garden" domain="[('garden', '
                    =', True)]"/>
                <group expand="1" string="Group By">
                    <filter string="postcode" name="postcode" context="{'group_by':'postcode'}"/>
                </group>
            </search>
        </field>
    </record>
    <!-- FOR TREE VIEW -->
    <record id="real_estate_property_view_tree" model="ir.ui.view">
        <field name="name">real.estate.tree</field>
        <field name="model">real.estate.property</field>
        <field name="arch" type="xml">
            <tree string="Channel">
                <field name="name"/>
                <field name="description"/>
                <field name="date_availability"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <field name="property_type_id"/>
                <field name="tag_ids" widget="many2many_tags"/>
                <!-- <field name="garage"/> -->
                <field name="garden_orientation"/>
            </tree>
        </field>
    </record>
    <!-- FOR FORM VIEW -->
    <record id="real_estate_property_view_form" model="ir.ui.view">
        <field name="name">real.estate.form</field>
        <field name="model">real.estate.property</field>
        <field name="arch" type="xml">
            <form string="Property">
                <header>
                    <field name="state" widget="statusbar" options="{'clickable' : '1','colors' : '1'}" statusbar_visible="new,sold,offer_received"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name" />
                    </h1>
                    <field name="tag_ids" widget="many2many_tags"/>
                    <group>
                        <group>
                            <field name="postcode"/>
                            <field name="property_type_id"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="best_price" string="Best Offer"/>
                            <field name="selling_price"/>
                        </group>
                        <notebook>
                            <page name="Description" string="Description">
                                <group>
                                    <group>
                                        <field name="description" string="Description"/>
                                        <field name="bedrooms"/>
                                        <field name="living_area" string="Living Area(sqm)"/>
                                        <field name="facades"/>
                                        <field name="tatal_area" string="Total Area(sqm)" />
                                        <field name="garage"/>
                                    </group>
                                    <group>
                                        <field name="garden"/>
                                        <field name="garden_area"/>
                                        <field name="garden_orientation"/>
                                        <field name="active" invisible="1"/>
                                    </group>
                                </group>
                            </page>
                            <page name="Offers">
                                <field name="offer_ids" nolabel="1"/>
                            </page>
                            <page name="other info" string="Other info">
                                <group>
                                    <group>
                                        <field name="salesperson_id" class=""/>
                                        <field name="buyer_id"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="real_estate_model_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">real.estate.property</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new property, the first step of a new project!
            </p>
            <p>
                Once the property is confirmed by the customer, it becomes a sales order.
                <br/> You will be able to create an invoice and collect the payment.
            </p>
        </field>
    </record>
</odoo>