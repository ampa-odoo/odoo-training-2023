<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_property_tags_action" model="ir.actions.act_window">
        <field name="name">Property tags</field>
        <field name="res_model">estate.property.tags</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">No property tags found, Please add your property tags over here</p>
            <p>Use the top left
                <strong>CREATE</strong> button to add new property tags!!!
            </p>
        </field>
    </record>
    <record id="property_tags_tree_view" model="ir.ui.view">
        <field name="name">Property Tags</field>
        <field name="model">estate.property.tags</field>
        <field name="arch" type="xml">
            <tree string="property tags">
                <field name="name"/>
                <field name="color"/>
            </tree>
        </field>
    </record>
    <record id="property_tags_form_view" model="ir.ui.view">
        <field name="name">New Property Tag</field>
        <field name="model">estate.property.tags</field>
        <field name="arch" type="xml">
            <form string="Property tags">
                <sheet>
                    <h1>
                        <group>
                            <field name="name" placeholder="Enter property tag"/>
                            <field name="color" widget="color_picker" options="{'color_field':'color'}"/>
                        </group>
                    </h1>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
