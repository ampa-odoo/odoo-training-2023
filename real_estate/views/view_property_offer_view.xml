<odoo>
    <data>
        <record id="model_property_offer_view_tree" model="ir.ui.view">
            <field name="name">Tree View</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="price" />
                    <field name="partner_id" />
                    <button name="offer_accepted" type="object" icon="fa-check" />
                    <button name="offer_refused" type="object" icon="fa-times" />
                    <field name="status" />
                    <field name="validity" />
                    <field name="date_deadline" />
                </tree>
                </field>
                </record>
    </data>
</odoo>