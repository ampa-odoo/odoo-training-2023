<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Search view -->
        <record id="real_estate_search_view" model="ir.ui.view">
            <field name="name">real.estate.search.view</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <search string="Estate Property">
                    <field name="name"/>
                    <field name="bedrooms"/>
                    <field name="description"/>
                    <field name="date_availability"/>
                    <separator/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    <filter string="date" name="date_availability"/>
                    <group expand="1" string="Group By">
                        <filter string="Property name" name="name" context="{'group_by':'name'}"/>
                        <filter string="Bedrooms" name="bedrooms" context="{'group_by':'bedrooms'}"/>
                    </group>
                </search>
            </field>
        </record>
</odoo>