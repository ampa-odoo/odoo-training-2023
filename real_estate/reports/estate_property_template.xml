<?xml version="1.0" encoding="utf-8"?>
<odoo>   
    <template id="report_property_offers">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page" style="border: 5px solid ;">
                        <h1>
                            <strong><span t-field="property.name" style="font-size: 300%;"/></strong>
                        </h1>
                        <div>
                            <h3>
                                <strong>Salesman : </strong>
                                <span t-field="property.salesperson_id"/>
                            </h3>
                        </div>
                        <div>
                            <h3>
                                <strong>Expected Price : </strong>
                                <span t-field="property.expected_price"/>
                            </h3>
                        </div>
                        <div>
                            <h3>
                                <strong>Status : </strong>
                                <span t-field="property.state"/>
                            </h3>
                        </div>
                        <div class="abc">
                            
                        </div>
                        <div>
                            <t t-call="real_estate.offers_template"/>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <template id="offers_template">
        <table class="table table-bordered table-sm">
            <t t-set="offers" t-value="property.mapped('offer_ids')" />
            <t t-if="offers">
                <thead>
                    <tr>
                        <th class="text-center" style="width: 30%" scope="col">Price</th>
                        <th class="text-center" style="width: 30%" scope="col">Partner</th>
                        <th class="text-center" style="width: 30%" scope="col">Validity (days)</th>
                        <th class="text-center" style="width: 30%" scope="col">Deadline</th>
                        <th class="text-center" style="width: 30%" scope="col">State</th>
                    </tr>
                </thead>
                <tbody>                               
                    <tr t-foreach="offers" t-as="offer">
                        <td class="text-end">
                            <span t-field="offer.price"/>
                        </td>
                        <td>
                            <span t-field="offer.partner_id"/>
                        </td>
                        <td class="w-25">
                            <span t-field="offer.validity"/>
                        </td>
                        <td>
                            <span t-field="offer.date_deadline"/>
                        </td>
                        <td class="w-25">
                            <span t-field="offer.status"/>
                        </td>
                    </tr>
                </tbody>
            </t>
            <t t-else="">
                <h1 style="color:red; font-family: verdana;
                font-size: 150%; ">No offers are there in this property</h1>
            </t>
        </table>     
    </template>
</odoo>