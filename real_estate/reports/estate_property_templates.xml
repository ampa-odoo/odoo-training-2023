<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="offers_template">
            <div>
            <table class="table" t-if="property.offers_ids">
                <thead>
                    <tr>
                        <th>Price</th>
                        <th>Partner</th>
                        <th>Validity(days)</th>
                        <th>Deadline</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-set="offers" t-value="property.mapped('offers_ids')"/>
                    <tr t-foreach="offers" t-as="offer">
                        <td>
                            <span t-field="offer.price"/>
                        </td>
                        <td>
                            <span t-field="offer.partner_id.name"/>
                        </td>
                        <td>
                            <span t-field="offer.validity"/>
                        </td>
                        <td>
                            <span t-field="offer.date_deadline"/>
                        </td>
                        <td>
                            <span t-field="offer.status"/>
                        </td>
                    </tr>
                </tbody>
            </table>
            <div t-else="">
                <strong>No offer made!!</strong>
            </div>
            </div>
    </template>

    <template id="property_detail">
        <h2>
            <span t-field="property.name"/>
        </h2>
        <div>
            <strong>Salesman:</strong>
            <span t-field="property.salesman_id.name"/>
        </div>
        <div>
            <strong>Expected Price:</strong>
            <span t-field="property.expected_price"/>
        </div>
        <div>
            <strong>State:</strong>
            <span t-field="property.state"/>
        </div>
    </template>
    <template id="property_template">
        
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <t t-call="real_estate.property_detail"/>
                        <div>
                            <t t-call="real_estate.offers_template"/>
                        </div>
                    </div>
                </t>
            </t>
        </t>
        
    </template>

</odoo>
