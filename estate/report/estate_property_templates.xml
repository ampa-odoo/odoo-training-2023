<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_property_offers">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <t t-call="estate.estate_property_offer_table_report"/>
                    </div>
                </t>
            </t>
        </t>
    </template>
    <template id="report_salesman_properties">
        <t t-foreach="docs" t-as="salesman">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div>
                            <h1>
                                <strong>Salesman:</strong>
                                <span t-field="salesman.name"/>
                            </h1>
                        </div>
                        <t t-if="salesman.property_ides">
                            <t t-set="record" t-value="salesman.mapped('property_ides')"/>
                            <t t-foreach="record" t-as="property">
                                <t t-call="estate.estate_property_offer_table_report"/>
                            </t>
                        </t>
                        <t t-else="">
                            <div>There is no properties for salesman</div>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
    <template id="estate_property_offer_table_report">
        <div>
            <h2>
                <span t-field="property.name"/>
            </h2>
            <strong>Expected Price: </strong>
            <span t-field="property.expected_price"/>
            <br></br>
            <strong>Status:</strong>
            <span t-field="property.state"/>
        </div>
        <t t-if="property.offer_ids"> 
            <table class="table">
                <thead>
                    <tr>
                        <th>Price</th>
                        <th>Partner</th>
                        <th>Validity</th>
                        <th>Deadline</th>
                        <th>State</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-set="offers" t-value="property.mapped('offer_ids')"/>
                    <tr t-foreach="offers" t-as="offer">
                        <td>
                            <span t-field="offer.price"/>
                        </td>
                        <td>
                            <span t-field="offer.partner_id"/>
                        </td>
                        <td>
                            <span t-field="offer.validity"/>
                        </td>
                        <td>
                            <span t-field="offer.date_deadline"/>
                        </td>
                        <td>
                            <span t-field="offer.status"/>
                        </td>
                    </tr>
                </tbody>
            </table>
        </t>
        <t t-else="">
            <div>There is no offers yet</div>
        </t>
    </template>
<!-- container templates -->
    <template id="index">
        <t t-call="website.layout">
            <t t-set="title">Estate Properties Lists</t>
            <div class="oe_structure">
                <div class="container">
                    <t t-foreach="properties" t-as="property">
                        <!-- <div>
                            <strong> <span t-esc="property.id"/></strong>
                            <strong>:</strong>
                            <span t-esc="property.name"/>
                        </div> -->
                        <p>
                            <span t-esc="property.id"/>
                            <a t-attf-href="/estate/{{ slug(property) }}">
                            <span t-esc="property.name"/></a>
                        </p>
                    </t>
                </div>
            </div>
        </t>
    </template>
    <template id="property_details">
    <t t-call="website.layout">
        <t t-set="title">Estate Property Type</t>
        <div class="oe_structure"/>
        <div class="oe_structure">
            <div class="container">
                <h3><t t-esc="details.name"/></h3>
                <p>Last modified: <i t-field="details.write_date" t-options='{"widget": "relative"}'/></p>
                    <div>
                        <strong>Date Avilability:</strong>
                        <span t-field="details.date_availability"/>
                    </div>
                    <div>
                        <strong>Expected Price:</strong>
                        <span t-field="details.expected_price"/>
                    </div>
            </div>
        </div>
        <div class="oe_structure"/>
    </t>
</template>
</odoo>