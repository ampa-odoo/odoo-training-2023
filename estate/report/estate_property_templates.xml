<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_property_offers">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="property">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>
                            <span t-field="property.name"/>
                        </h2>
                        <div>
                            <strong>Salesman: </strong>
                            <span t-field="property.sales_id"/>
                        </div>
                        <div>
                            <strong>Expected Price: </strong>
                            <span t-field="property.expected_price"/>
                        </div>
                        <div>
                            <strong>State: </strong>
                            <span t-field="property.state"/>
                        </div>
                        <t t-if="property.offer_ids">
                            <t t-name="estate.offers_table">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Price</th>
                                            <th>Partner</th>
                                            <th>Validity</th>
                                            <th>Deadline</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-set="offers" t-value="property.mapped('offer_ids')"/>
                                        <tr t-foreach="offers" t-as="offer">
                                            <td>
                                                <span t-field="offer.price"/>
                                            </td>
                                            <td>
                                                <span t-field="offer.partner_id"/>
                                            </td>
                                            <td>
                                                <span t-field="offer.validity"/>
                                            </td>
                                            <td>
                                                <span t-field="offer.date_deadline"/>
                                            </td>
                                            <td>
                                                <span t-field="offer.status"/>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </t>
                        </t>
                        <t t-else="">
                            <strong>This Property Has No Offers!</strong>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
    <template id="report_salesman_property">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="x">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h1>
                            <strong>Salesman: </strong>
                            <span t-field="x.name"/>
                        </h1>
                        <t t-foreach="docs" t-as="property">
                            <div>
                                <h2>
                                    <span t-field="property.property_ids.name"/>
                                </h2>
                            </div>
                            <div>
                                <strong>Expected Price: </strong>
                                <span t-field="property.property_ids.expected_price"/>
                            </div>
                            <div>
                                <strong>State: </strong>
                                <span t-field="property.property_ids.state"/>
                            </div>
                            <t t-if="property.property_ids.offer_ids">
                                <t t-call="estate.offers_table"/>
                            </t>
                            <t t-else="">
                                <strong>This Property Has No Offers!</strong>
                            </t>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>