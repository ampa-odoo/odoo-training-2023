<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <template id="index">
        <t t-call="website.layout">
            <div class="container">
                <t t-foreach="properties" t-as="property">
                    <p>
                        <a t-attf-href="/estate/{{ slug(property) }}">
                            <t t-esc="property.id"/> <t t-esc="property.name"/>
                        </a>
                    </p>
                </t>
            </div>
        </t>
    </template>
    <template id="listing">
        <t t-call="website.layout">
            <div class="container">
                <h3 t-field="plot.name"/>
                <div t-field="plot.listing"/>
                <div t-field="plot.state"/>
                <p>Last modified: <i t-field="plot.write_date" t-options='{"widget": "relative"}'/></p>
            </div>
        </t>
    </template>
</odoo>