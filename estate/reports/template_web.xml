<odoo>
    <template id= "estate_controller_test" >
        <t t-call = "website.layout">
            <title>Property</title>
                <div class = "container d-flex justify-content-between   mx-auto flex-wrap mb-3">
                    <t t-foreach = "properties" t-as = "property">
                        <t t-if = "property.state in ('new','offer_recieved')" >
                            <div class = "shadow-lg  mx-auto mt-2 p-2 w-50 d-flex flex-column  align-items-center " >
                                <div>
                                    <a t-attf-href="/estate/{{ slug(property) }}">
                                        <img t-attf-alt="No Image Available"  t-attf-src="data:image/jpg;base64,{{ property.image }}" class = "w-100 rounded"/>    
                                    </a>
                                </div>
                                    <h2 t-esc="property.name" class="mt-2"/>
                                    <p t-esc = "property.description"/>
                                    <a t-attf-href="/estate/{{ slug(property) }}">
                                        <button class = "bg-primary rounded-pill text-light border p-2">View Property</button>
                                    </a>
                            </div>
                        </t>
                    </t>  
                          
                </div>
                <div class=" d-flex justify-content-center mt-3 mb-3">
                    <t t-call="website.pager" />
                </div>
        </t>
        
      </template>
      <template id = "listing_property">
        <t t-call= "website.layout">
           <div class = "container d-flex flex-column align-items-center justify-content-around mt-5 mb-5 p-3">
                <div class = "w-75 border">
                    <img t-attf-alt="No Image Available"  t-attf-src="data:image/jpg;base64,{{ listed_property.image }}" class = "w-100"/>
                </div>
                <div class = ' d-flex flex-column justify-content-center alig-items-center'>
                    <h2 t-field = "listed_property.name"></h2>   
                </div>
           </div>
    
           <div class = "container">
                <table class = "table">
                    <thead>
                        <tr>
                            <th>Expected price</th>
                            <th>State</th>
                            <th>date_availability</th>
                            <th>Postcode</th>
                            <th>Type</th>
                        </tr>    
                    </thead>
                    <tbody>
                        <td>
                            <span t-field="listed_property.expected_price"/>
                        </td>
                        <td>
                            <span t-field="listed_property.state"/>
                        </td>
                        <td>
                            <span t-field="listed_property.date_availability"/>
                        </td>
                        <td>
                            <span t-field="listed_property.postcode"/>
                        </td>
                        <td>
                            <span t-field="listed_property.property_type_id"/>
                        </td>
                    </tbody>
                </table>
                <p t-esc = "listed_property.description"/>
    
           </div>
        </t>
      </template>    
</odoo>