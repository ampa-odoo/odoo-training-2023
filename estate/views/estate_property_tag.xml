<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <!-- Standard Record -->
    <record id="estate_property_tags_action" model="ir.actions.act_window">
        <field name="name">Property Tags</field>
        <field name="res_model">estate.property.tag</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Property Tags as of now!
            </p>
        </field>
    </record>
    <!-- Form View -->
    <record id="estate_property_tags_formview" model="ir.ui.view">
        <field name="name">Estate Property Type Form View</field>
        <field name="model">estate.property.tag</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="property_tag_title" name="property tag title">
                        <h1>
                            <field name="name" placeholder="e.g.- cozy, renovant"/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>
</odoo>