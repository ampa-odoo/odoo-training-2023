<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="estate_model_ad_property1" model="ir.actions.act_window">
            <field name="name">Property 1</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">tree,form</field>
    </record>

    <record id="estate_model_ad_property2" model="ir.actions.act_window">
            <field name="name">Property 2</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">tree,form</field>
    </record>

    <record id="estate_model_settings_types" model="ir.actions.act_window">
            <field name="name">Property Types</field>
            <field name="res_model">estate.property.type</field>
            <field name="view_mode">tree,form</field>
    </record>

    <record id="estate_model_settings_tags" model="ir.actions.act_window">
        <field name="name">Property Tags</field>
        <field name="res_model">estate.property.tags</field>
        <field name="view_mode">tree,form</field>
    </record>

<!-- ___________________________TREE VIEW___________________________ -->

    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.view.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="bedrooms" optional="show"/>
            </tree>
        </field>
    </record>

<!-- __________________________FORM VIEW__________________________ -->

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.view.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">

            <form string="estate_form_view">
                <header>
                    <button name="action_sold" type="object" string="Sold"/>
                    <button name="action_canceled" type="object" string="Cancel"/>
                    <field name="state" widget="statusbar" options="{'clickable':'1'}"/>
                </header>

                <sheet>
                    <label for="name" string="Name"></label>
                    <h1><field name="name"/></h1>
                    <field name="date_availability" nolabel="1"/>

                    <group>
                        <group>
                            <field name="property_type_id"/>
                        </group>
                        <group>
                            <field name="tags_ids" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="postcode"/>
                        </group>
                        <group>
                            <field name="garage"/> 
                        </group>
                    </group>
                    
                    <group>    
                        <group string="pricing">    
                            <field name="selling_price"/>                       
                            <field name="expected_price"/>
                        </group>
                        <group string="property specifications">    
                            <field name="bedrooms"/>
                            <field name="living_area"/>
                            <field name="facades"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Description">
                            <textarea><field name="description"/></textarea>
                        </page>
                        <page string="Garden">
                            <group string="info">
                                <group>
                                    <field name="garden"/>
                                </group>
                                <group>
                                    <field name="garden_orientation"/>
                                </group>
                                <group>
                                    <field name="garden_area"/>
                                </group>
                            </group>
                        </page>
                        <page string="Other info">
                            <group>
                                <field name="sales_id" widget="many2one_avatar"/>
                            </group>
                            <group>
                                <field name="buyers_id"/>
                            </group>
                            <group>
                                <field name="total_area"/>
                            </group>
                            <group>
                                <field name="best_price"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids">
                                <tree editable="1">
                                    <field name="price"/>
                                    <field name="partner_id"/>
                                    <button name="action_accept" type="object" string="Accept" icon="fa-check"/>
                                    <button name="action_refuse" type="object" string="Refuse" icon="fa-times"/>
                                    <field name="status"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

<!-- ________________________SEARCH VIEW___________________________ -->

    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.view.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="search property">
                <field name="name" string="Title"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <filter name="state" string="Available property" domain="[('state', '=', 'new')]"/>
                <filter name="expected_price" string="Expensive property" domain="[('expected_price', '>=', '15000')]"/>
                <group expand="1" string="group by">
                    <filter name="postcode" string="Postal code" context="{'group_by':'postcode' ,'resiidual':'True'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>