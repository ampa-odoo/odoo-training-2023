    <!-- ________________________FORM VIEW____________________ -->


    <record id="estate_model_form" model="ir.ui.view">
        <field name="name">estate.model.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="estate_form">
                <header>
                    <field name="state" widget="statusbar"  options= "{'clickable': '1'}" />
                </header>
                <sheet>
                    <label for="name"/>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group>
                        <group style="margin-top:30px">
                            <field name="property_type_id"/>
                        </group>
                        <group style="margin-top:30px">
                            <field name="tag_ids" widget="many2many_tags"/>
                        </group>
                        <group style="margin-top:30px">
                            <field name="postcode"/>
                        </group>
                        <group style="margin-top:30px">
                            <field name="date_availability"/>
                        </group>
                        <group style="margin-top:30px">
                            <field name="expected_price"/>
                        </group>
                        <group style="margin-top:30px">
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <group style="margin-top:30px">
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page string="Property  Descriptions">
                            <group>
                                <group style="margin-top:30px">
                                    <field name="bedrooms"/>
                                </group>
                                <group style="margin-top:30px">
                                    <field name="living_area"/>
                                </group>
                                <group style="margin-top:30px">
                                    <field name="facades"/>
                                </group>
                                <group style="margin-top:30px">
                                    <field name="garage"/>
                                </group>   
                            </group>
                        </page>
                        <page string="garden descriptions">
                            <group>
                                <group style="margin-top:30px">
                                    <field name="garden"/>
                                </group>
                                <group style="margin-top:30px">
                                    <field name="garden_area"/>
                                </group>
                                <group style="margin-top:30px">
                                    <field name="garden_orientation" />
                                </group>
                            </group>
                        </page>
                        <page string="sale info">
                            <group>
                                <group style="margin-top:30px" >
                                    <field name="buyer_id"/>
                                </group>
                                <group style="margin-top:30px">
                                    <field name="salesperson_id"/>
                                </group>
                            </group>
                        </page>
                        <page string="Offers" >
                            <field name="offer_ids">
                                <tree>
                                    <field name="price"/>
                                    <field name="partner_id"/>
                                    <field name="status"/>
                                </tree>
                                <!-- <form>
                                    <sheet>
                                        <field name="price"/>
                                        <field name="partner_id"/>
                                        <field name="status"/>
                                    </sheet>
                                </form> -->

                            </field>

                            
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

     <!-- ________________________Search VIEW____________________ -->

     <record id="estate_model_search" model="ir.ui.view">
        <field name="name">estate.model.search_view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="estate_search">
                <field name="name" string="Title"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <field name="property_type_id"/>
                
                <filter name="state" string = "Available" domain="['|', ('state', '=', 'new'),('state', '=', 'development')]"/>
                <separator/>
                <filter name="expected_price" string = "high rate property" domain="[('expected_price', '>=', '300001')]"/>
                <group expand="1" string="Group By">
                    <filter string="Postcode" name="postcode" context="{'group_by':'postcode', 'residual_visible':True}"/>
                </group>
            </search>
        </field>
     </record>
</odoo>
