<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="estate_property_tree_view" model="ir.ui.view">
        <field name="name">Estate_Property_treeview</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"  />
                <field name="description" />
                <field name="postcode"/>
                <field name="date_availability"/>
                <field name="expected_price"/>
                <field name="selling_price" widget="handle"/>
                <field name="bedrooms"/>
                <field name="living_area" optional="show"/>
                <field name="facades" optional="hide"/>
                <field name="garage" optional="hide"/>
                <field name="garden" optional="hide"/>
                <field name="garden_area" optional="hide"/>
                <field name="garden_orientation" optional="hide"/>
            </tree>
        </field>
    </record>
    <record id="estate_property_form_view" model="ir.ui.view">
        <field name="name">Estate_Property_formview</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group col="1">
                            <field name="name"/>
                            <field name="postcode"/>
                            <field name="expected_price"/>
                            <field name="bedrooms"/>
                            <field name="facades" />
                            <field name="garden"/>
                            <field name="garden_orientation" />
                            <field name="state"/>
                        </group>
                        <group col="2">
                            <field name="description"/>
                            <field name="date_availability"/>
                            <field name="selling_price" widget="handle"/>
                            <field name="living_area" />
                            <field name="garage"/>
                            <field name="garden_area"/>
                            <field name="active" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click here to create a new Advertisment.
            </p>
        </field>
    </record>

</odoo>
