<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="real_estate_tree_view" model="ir.ui.view">
            <field name="name">Real Estate</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <tree expand="1" string="Real Estate">
                    <field name="name" />
                    <field name="description" />
                    <field name="selling_price" />
                    <field name="buyer_id" />
                    <field name="tag_ids" />
                    <field name="property_type_id" optional="hide"/>
                    <field name="postcode" optional="hide" />
                    <field name="facades" optional="hide" />
                </tree>
            </field>
        </record>

        <record id="real_estate_form_view" model="ir.ui.view">
            <field name="name">Real Estate</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form string="Real Estate">
                    <header>
                        <field name="state" widget="statusbar" options="{'clickable':'1'}"></field>
                    </header>
                    <sheet>
                        <label for="name">Name</label>
                        <h1>
                            <field name="name" />
                        </h1>
                        <group>
                            <group>
                                <field name="date_availability" />
                                <field name="expected_price" />    
                                <field name="property_type_id" />    
                            </group>
                            <group>
                                <field name="postcode" />
                                <field name="selling_price" />
                                <field name="tag_ids" widget="many2many_tags"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <group>
                                        <field name="description"/>
                                        <field name="facades" />
                                        <field name="garage" />
                                    </group>
                                    <group>
                                        <field name="bedrooms" />
                                        <field name="living_area" />
                                    </group>
                                </group>
                            </page>
                            <page string="Garden">
                                <group>
                                    <group>
                                        <field name="garden" />
                                        <field name="garden_orientation" />
                                    </group>
                                    <group>
                                        <field name="garden_area" />
                                    </group>
                                </group>
                            </page>
                            <page string="Other Info.">
                                <group>
                                    <field name="salesperson_id"></field>
                                    <field name="buyer_id"></field>
                                </group>
                            </page>
                            <page string="Offers">
                                    <field name="offer_ids">
                                        <tree>
                                            <field name="price" />
                                            <field name="partner_id" />
                                            <field name="status" />
                                        </tree>
                                    </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="real_estate_search_view" model="ir.ui.view">
            <field name="name">Real Estate</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <search string="Real Estate">
                    <field name="name" />
                    <field name="date_availability" />
                    <field name="selling_price" />
                    <filter string="Garden" name="garden" domain="[('garden', '=', True)]" />
                    <separator/>
                    <filter string="Available" name="state"
                    domain="['|',('state', '=', 'new'),('state', '=', 'offer_received')]" />
                    <separator/>
                    <filter name="date_availability" date="create_date" string="Date" />
                    <separator/>
                    <filter string="Archived" name="active" domain="[('active', '=', False)]" />
                    <group string="Group By">
                        <filter string="Post Code" name="postcode" context="{'group_by':'postcode'}" />
                        <separator/>
                        <!-- <filter name="date_availability" string="Creation Date"
                            context="{'group_by': 'create_date'}" /> -->
                    </group>
                    <searchpanel> 
                        <field name = "state" icon="fa-users" enable_counters = "1"/> 
                    </searchpanel>
                </search>
            </field>
        </record>
    </data>
</odoo>