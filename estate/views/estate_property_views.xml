<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="estate_model_menu_home" model="ir.actions.act_window">
            <field name="name">Home</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">tree,form</field>
    </record>

    <record id="estate_model_menu_edit" model="ir.actions.act_window">
            <field name="name">Edit</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">tree,form</field>
    </record>

    <record id="estate_model_action_property" model="ir.actions.act_window">
            <field name="name">Options</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">tree,form</field>
    </record>

<!-- ___________________________TREE VIEW___________________________ -->

    <record id="estate_view_tree" model="ir.ui.view">
        <field name="name">estate.view.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="bedrooms" optional="show"/>
            </tree>
        </field>
    </record>

<!-- __________________________FORM VIEW__________________________ -->

    <record id="estate_view_form" model="ir.ui.view">
        <field name="name">estate.view.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">

            <form string="estate_form_view">
                <header>
                    <field name="state" widget="statusbar"/>
                </header>

                <sheet>
                    <label for="name" string="Name"></label>
                    <h1><field name="name"/></h1>
                    <field name="date_availability" nolabel="1"/>

                    <group>
                        <group>
                            <field name="postcode"/>
                        </group>
                        <group>
                            <field name="garage"/> 
                        </group>
                    </group>
                    
                    <group>    
                        <group string="pricing">    
                            <field name="selling_price"/>                       
                            <field name="expected_price"/>
                        </group>
                        <group string="property specifications">    
                            <field name="bedrooms"/>
                            <field name="living_area"/>
                            <field name="facades"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Description">
                            <textarea><field name="description"/></textarea>
                        </page>
                        <page string="Garden">
                            <group string="info">
                                <group>
                                    <field name="garden"/>
                                </group>
                                <group>
                                    <field name="garden_orientation"/>
                                </group>
                                <group>
                                    <field name="garden_area"/>
                                </group>
                            </group>
                        </page>
                        <page string="Note">
                            <field name="note"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>