<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="estate_model_menu_home" model="ir.actions.act_window">
            <field name="name">Home</field>
            <field name="res_model">estate.model</field>
            <field name="view_mode">tree,form</field>
    </record>

    <record id="estate_model_menu_edit" model="ir.actions.act_window">
            <field name="name">Edit</field>
            <field name="res_model">estate.model</field>
            <field name="view_mode">tree,form</field>
    </record>

    <!-- <record id="estate_model_action_property" model="ir.actions.act_window">
            <field name="name">Estate action</field>
            <field name="res_model">estate.model</field>
            <field name="view_mode">tree,form</field>
    </record> -->

<!-- ___________________________TREE VIEW___________________________ -->

    <record id="estate_view_tree" model="ir.ui.view">
        <field name="name">estate.view.tree</field>
        <field name="model">estate.model</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="bedrooms"/>
            </tree>
        </field>
    </record>

<!-- __________________________FORM VIEW__________________________ -->

    <record id="estate_view_form" model="ir.ui.view">
        <field name="name">estate.view.form</field>
        <field name="model">estate.model</field>
        <field name="arch" type="xml">

            <form string="estate_form_view">
                <sheet>
                <group>
                    <group>
                        
                        <field name="name"/>
                    
                        <field name="postcode"/>
                        
                    </group>
                    <group>    
                        
                        <field name="selling_price"/>
                        
                        <field name="expected_price"/>

                        <field name="date_availability"/>

                    </group>
                    <group>    
                        
                        
                    
                        <field name="bedrooms"/>
                        
                    </group>
                </group>
                <group>    
                    <group>    
                        
                        <field name="living_area"/>
                        
                        <field name="facades"/>
                    
                    </group>
                    <group>
                        
                        <field name="garden"/>
                        
                        <field name="garden_area"/>

                        <field name="garden_orientation"/>
                
                    </group>
                    <group>

                        <field name="garage"/>   
                        
                    </group>
                </group>    
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>