<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="real_estate_tree_view" model="ir.ui.view">
        <field name="name">Real Estate</field>
        <field name="model">real.state</field>
        <field name="arch" type="xml">
            <tree string="Real Estate">
                <field name="name" />
                <field name="description" />
                <field name="date_availability" />
                <field name="selling_price" />
                <field name="postcode" optional="hide"/>
                <field name="facades" optional="hide" />    
            </tree>
        </field>
    </record>


    <record id="real_estate_form_view" model="ir.ui.view">
        <field name="name">Real Estate</field>
        <field name="model">real.state</field>
        <field name="arch" type="xml">
            <form string="Real Estate">
                <header>
                    <field name="state" widget="statusbar"></field>
                </header>
                <sheet>
                    <label for="name" >Name</label>
                    <h1><field name="name"/></h1>
                    <group> 
                        <group>
                            <field name="facades" />
                            <field name="date_availability" />
                            <field name="expected_price" />
                            <field name="selling_price" />
                        </group>
                        <group>
                            <field name="postcode" />
                            <field name="garage" />
                            <field name="bedrooms" />
                            <field name="living_area" />
                        </group>
                    </group>

                    <notebook>
                        <page string="Description">
                            <field name="description"></field>
                        </page>
                        <page string="Garden">
                            <group>
                                <group>
                                    <field name="garden" />
                                    <field name="garden_orientation" />
                                </group>
                                <group>
                                    <field name="garden_area" />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="real_estate_search" model="ir.ui.view">
        <field name="name">Real Estate</field>
        <field name="model">real.state</field>
        <field name="arch" type="xml">
            <search string="Real Estate">
                <field name="name" />
                <field name="date_availability" />
                <field name="selling_price" />
                <filter string="Garden" name="garden" domain="[('garden', '=', True)]"/>
                <filter string="Available" name="state" domain="['!',('state', '=', 'New'),('state', '=', 'Offer Received')]"/>
                <filter name="date_availability" date="create_date" string="Date"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="1" string="Group By">
                    <filter string="Post Code" name="postcode" context="{'group_by':'postcode', 'residual_visible':True}"/>
                </group>
            </search>

        </field>
    </record>

</odoo>         