<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- treee view -->
         <record id="estate_property_treeView" model="ir.ui.view">
         <field name="name">Properties</field>
         <field name="model">estate.property</field>
             <field name="arch" type="xml">
                 <tree string="...">    <!-- showing columns in tree view -->
                    <field name="name" />
                    <field name="description" />
                    <field name="bedrooms" optional="show"/>
                    <field name="expected_price"/>
                    <field name="garden" optional="show"/>
                    <field name="living_area" optional="hide"/>
                 </tree>
             </field>
        </record>

        
        <record id="estate_property_formview" model="ir.ui.view">
            <field name="name">Estate property form view</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form string="Estate property formview">
                    <sheet>
                        <group col="3">
                            <group>
                                <field name="name" />
                               
                            </group>
                            <group>
                                <field name="bedrooms"/>
                                <field name="expected_price"/>
                                
                            </group>
                            <group>
                                <field name="garden"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                 <!-- <label for="description" string="Description"/> -->
                                 <group>
                                    <field name="description" string="Property Details" />
                                </group>
                            </page>
                            
                        </notebook> 
                    </sheet>
                </form>
            </field>
            
        </record>


        <record id="estate_property_view_search" model="ir.ui.view">
            <field name="name">Estate property view</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <search string="Search Property Offers">
                    <field name="name"/>
                    <field name="postcode"/>
                    <field name="expected_price"/>
                    <field name="bedrooms"/>
                    <field name="living_area"/>
                    <field name="facades"/>
                </search>
            </field>
        </record>
        

        <record id="estate_property_action" model="ir.actions.act_window">
            <field name="name">Properties</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Add a new property
              </p>
            </field>
        </record>


    </data>
</odoo>