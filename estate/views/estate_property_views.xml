<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="real_estate_tree_view" model="ir.ui.view">
            <field name="name">Real Estate</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <tree expand="1" string="Real Estate">
                    <field name="name" />
                    <field name="description" optional="hide"/>
                    <field name="selling_price" />
                    <field name="buyer_id" widget="many2one_avatar" />
                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    <field name="property_type_id" />
                    <field name="state" widget="badge" />
                    <field name="postcode" optional="hide" />
                    <field name="facades" optional="hide" />
                </tree>
            </field>
        </record>

        <record id="real_estate_form_view" model="ir.ui.view">
            <field name="name">Real Estate</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form string="Real Estate">
                    <header>
                        <field name="state" widget="statusbar"></field>
                        <button name="action_sold_button_header" type="object" string="Sold" attrs="{'invisible':[('state','!=','new')]}"/>
                        <button name="action_cancel_button_header" type="object" string="Cancel" attrs="{'invisible':[('state','!=','new')]}"/>
                        <button name="%(estate_property_type_action)d" type="action"
                            string="Property Type" />
                        <button name="%(estate_property_tag_action)d" type="action" string="Tags" />
                    </header>
                    <sheet>
                        <label for="name">Name</label>
                        <h1>
                            <field name="name" />
                        </h1>
                        <group>
                            <group>
                                <field name="state" />
                                <field name="date_availability" />
                                <field name="expected_price" />
                                <field name="property_type_id" options="{'no_create':True,'no_open': True}"/>
                                <field name="total_area" />
                            </group>
                            <group>
                                <field name="postcode" />
                                <field name="selling_price" />
                                <field name="tag_ids" widget="many2many_tags"
                                    options="{'color_field': 'color','no_edit_color': True}" />
                                <field name="best_price" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <group>
                                        <field name="description" />
                                        <field name="facades" />
                                        <field name="garage" />
                                    </group>
                                    <group>
                                        <field name="bedrooms" />
                                        <field name="living_area" />
                                    </group>
                                </group>
                            </page>
                            <page string="Garden">
                                <group>
                                    <group>
                                        <field name="garden" />
                                    </group>
                                    <group attrs="{'invisible' : [('garden', '=', False)]}">
                                        <field name="garden_area" />
                                        <field name="garden_orientation" />
                                    </group>
                                </group>
                            </page>
                            <page string="Offers">
                                <field name="offer_ids" attrs="{'readonly':['|',('state','=','sold'),'|',('state','=','canceled'),('state','=','offer_accepted')]}">
                                    <tree editable="bottom">
                                        <field name="price" />
                                        <field name="partner_id" />
                                        <field name="validity" />
                                        <field name="date_deadline" />
                                        <field name="status" />
                                        <button name="offer_accepted_action" type="object"
                                            icon="fa-check" />
                                        <button name="offer_rejected_action" type="object"
                                            icon="fa-times" />
                                    </tree>
                                </field>
                            </page>
                            <page string="Other Info.">
                                <group>
                                    <field name="salesperson_id" widget="many2one_avatar"></field>
                                    <field name="buyer_id" widget="many2one_avatar"></field>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" />
                        <field name="message_ids" />
                        <field name="activity_ids" />
                    </div>
                </form>
            </field>
        </record>

        <record id="real_estate_search_view" model="ir.ui.view">
            <field name="name">Real Estate</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <search string="Real Estate">
                    <field name="name" />
                    <field name="date_availability" />
                    <field name="selling_price" />
                    <filter string="Garden" name="garden" domain="[('garden', '=', True)]" />
                    <separator />
                    <filter string="Available" name="state"
                        domain="['|',('state', '=', 'new'),('state', '=', 'offer_received')]" />
                    <separator />
                    <filter name="date_availability" date="create_date" string="Date" />
                    <separator />
                    <filter string="Archived" name="active" domain="[('active', '=', False)]" />
                    <group string="Group By">
                        <filter string="Post Code" name="postcode" context="{'group_by':'postcode'}" />
                        <separator />
                        <!-- <filter name="date_availability" string="Creation Date"
                        context="{'group_by': 'create_date'}" /> -->
                    </group>
                    <searchpanel>
                        <field name="state" icon="fa-users" enable_counters="1" />
                    </searchpanel>
                </search>
            </field>
        </record>
    </data>
</odoo>