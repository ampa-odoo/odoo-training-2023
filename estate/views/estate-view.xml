<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="estate_model_action" model="ir.actions.act_window">
            <field name="name">Properties</field>
            <field name="res_model">estate.model</field>
            <field name="view_mode">tree,form</field>
    </record>

    <record id="estate_model_action1" model="ir.actions.act_window">
            <field name="name">Properties_1</field>
            <field name="res_model">estate.model</field>
            <field name="view_mode">tree,form</field>
    </record>

    <record id="estate_model_action01" model="ir.actions.act_window">
            <field name="name">Properties_01</field>
            <field name="res_model">estate.model</field>
            <field name="view_mode">tree,form</field>
    </record>

    <record id="estate_model_action02" model="ir.actions.act_window">
            <field name="name">Properties_02</field>
            <field name="res_model">estate.model</field>
            <field name="view_mode">tree,form</field>
    </record>

<!-- ____________________________Tree View______________________________________ !-->


    <record id="estate_view_tree" model="ir.ui.view">
        <field name="name">estate.view.tree</field>
        <field name="model">estate.model</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/> 
                <field name="description"/>
            
                <field name="postcode"/>
            
                <field name="expected_price"/>
            
                <field name="selling_price"/>
            
                <field name="bedrooms"/>
            </tree>
        </field>
    </record>

    <!-- ____________________________Form View______________________________________ !-->

    <record id="estate_model_form" model="ir.ui.view">
        <field name="name">estate.model.form</field>
        <field name="model">estate.model</field>
        <field name="arch" type="xml">
        <form string="estate_form">
            <sheet>
                <group>
                    <group>
                        <field name="name"/>
                        <field name="postcode"/>
                    </group>
                    <group>
                        <field name="date_availability"/>
                        <field name="expected_price"/>
                    </group>
                    <group>
                        <field name="selling_price"/>
                        <field name="bedrooms"/>
                    </group>
                    <group>
                        <field name="living_area"/>
                    
                        <field name="facades"/>
                    </group>
                    <group>
                        <field name="garage"/>
                    
                        <field name="garden"/>
                    </group>
                    <group>
                        <field name="garden_area"/>
                    
                        <field name="garage_orientation"/>
                    </group>
                </group>
                <notebook>
                    <page string="Description">
                        <field name="description"/>
                    </page>
                </notebook>
            </sheet>
        </form>
        </field>
    </record>
 
</odoo>