<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="real_estate_type_tree_view" model="ir.ui.view">
            <field name="name">Real Estate</field>
            <field name="model">estate.property.type</field>
            <field name="arch" type="xml">
                <tree expand="1" string="Real Estate">
                    <field name="sequence" widget="handle"/>
                    <field name="name" />
                    <field name="offer_count" />
                    <!-- <field name="offer_ids" /> -->
                </tree>
            </field>
        </record>
        <record id="real_estate_type_form_view" model="ir.ui.view">
            <field name="name">Real Estate</field>
            <field name="model">estate.property.type</field>
            <field name="arch" type="xml">
                <form string="Real Estate">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="%(estate_property_offer_action)d" type="action" class="oe_stat_button" icon="fa-usd">
                                <field name="offer_count" widget="statinfo" string="Offers"/>
                            </button>
                        </div>
                        <group>
                            <field name="name" />
                        </group>
                        <notebook>
                            <page string="Property">
                                <field name="property_name_ids" string="Property name" />
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>        