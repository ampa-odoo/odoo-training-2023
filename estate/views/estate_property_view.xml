<?xml version="1.0" encoding="utf-8"?>
<odoo>    
        <!-- tree view -->
    <record id="real_estate_list_view" model="ir.ui.view">
        <field name="name">Real Estate List view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string= "Real Estate" decoration-success="state in ['offer_accepted', 'offer_received','new']" decoration-bf="state=='offer_accepted'" decoration-muted="state=='sold'">
                <!-- <tree default_order="date desc">
                     arrange by order -->
                <!--sequence - must be define in .py file. Allow to change order of things manually -->
                <!-- <field name="sequence" widget="handle"/>     -->
                    <field name="name"/>
                    <field name="property_type_id"/>
                    <field name="postcode"/>
                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    <field name="bedrooms" widget="badge"/>
                    <field name="living_area"/>
                    <field name="expected_price"/>
                    <field name="selling_price"/>
                    <field name="date_availability" optional="hide"/>
                    <field name="state" optional="hide"/>
            </tree>
        </field>
    </record>
                <!-- search,filter,group by -->
    <record id="real_estate_property_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Estate property">
                <field name="name" string="Title"/>
                <field name="property_type_id"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="tag_ids"/>
                <field name="living_area" filter_domain="[('living_area', '>=', self)]"/> 
                    <!-- show living area greater than or equal to the input value -->
                    <!-- self represents the value entered by the user -->
                <field name="facades"/>
                <separator/>
                <filter string="Available Properties" name="available_property" domain="[('state','in',['new','offer_received'])]"/>
                <group string="Group By">
                    <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}"/>
                </group>
            </search>
        </field>
    </record>
        
                <!-- form view -->
    <record id="real_estate_form_view" model="ir.ui.view">
        <field name="name">Property form view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">             
            <form>
                <header>
                    <button name="property_sold" type="object" string="Sold" class="btn btn-primary" states='new,offer_received,offer_accepted'/>
                    <button name="property_cancel" type="object" string="Cancel" class="btn btn-secondary" states='new,offer_received,offer_accepted,sold'/>
                    <field name="state" widget="statusbar" options = "{'clickable' : '1'}"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Sold" bg_color="bg-success"
                        attrs="{'invisible': [('state','not in',('sold'))]}"/>
                    <widget name="web_ribbon" title="Canceled" bg_color="bg-danger"
                        attrs="{'invisible': [('state','not in',('canceled'))]}"/>
                    <label for="name" string="Name" />                        
                    <group>
                        <group>
                            <h1><field name="name" style="width:700%"/></h1>
                        </group>
                        <group>
                            <button type="action" name="%(estate.property_type_model_action)d" string="Property Type" style="width:25%"/>
                            <button type="action" name="%(estate.estate_property_tag_model_action)d" string="Property Tags" style="width:25%"/>
                        </group>
                    </group>
                        <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        <!-- widget="many2many_checkboxes"    -->
                    <group>
                        <group>
                            <field name="property_type_id" options="{'no_create': True}"/> 
                            <!-- no_create = new record can not be created from here -->
                        </group>
                        <group>
                            <field name="date_availability"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="expected_price"/>
                        </group>
                        <group>
                            <field name="selling_price"/>
                        </group>
                    </group> 
                    <group>
                        <group>
                            <field name="best_price"/>
                        </group>
                    </group>  
                    <notebook>
                        <page string="Description">
                                <group>
                                    <field name="postcode"/>
                                </group>
                                <group>
                                    <field name="bedrooms"/>
                                </group>
                                <group>
                                    <field name="living_area"/>
                                </group>
                                <group>
                                    <field name="facades"/>
                                </group>
                                <group>
                                    <field name="total_area"/>
                                </group>
                        </page>                              
                        <page string="Garden">
                            <group>
                                <field name="garage"/>
                            </group>
                            <group>
                                <field name="garden" widget="boolean_toggle"/>
                            </group>
                            <group>
                                <field name="garden_area" attrs="{'invisible': [('garden', '=', False)]}"/>
                            </group>
                            <group>
                                <field name="garden_orientation" attrs="{'invisible': [('garden', '=', False)]}"/>
                            </group>
                        </page>
                        <page string="Offer">
                            <field name="offer_ids" attrs="{'readonly': [('state','in',('offer_accepted','sold','canceled'))]}">
                                    <tree string= "offers" editable="top" decoration-success="status=='accepted'" decoration-danger="status=='refused'">
                                        <field name="price" optional="show"/>
                                        <field name="validity" optional="show"/>
                                        <field name="date_deadline" optional="show"/>
                                        <field name="partner_id" optional="show"/>
                                        <button name="action_accepted" type="object" title="ac" icon="fa-check" attrs="{'invisible': [('status', '!=', False)]}"/>
                                        <button name="action_refused" type="object" title="re" icon="fa-times" attrs="{'invisible': [('status', '!=', False)]}"/>
                                        <field name="status" optional="hide"/>
                                    </tree>
                            </field>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="buyer_id"/>
                            </group>
                            <group>
                                <field name="salesperson_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <!-- code for chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                        <field name="activity_ids" widget="mail_activity"/>
                    <!-- <field name="message_follower_ids"/>
                    <field name="message_ids"/> -->
                </div>
             </form>
        </field>
    </record>
</odoo>