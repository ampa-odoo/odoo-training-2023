<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--TREE VIEW-->
    <record id="estate_property_tree_view" model="ir.ui.view">
        <field name="name">Estate Property Tree View</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="tree_view">
                <field name="name" optional="show"/>
                <field name="description" optional="show"/>
                <field name="selling_price" optional="show"/>
                <field name="expected_price" optional="show"/>
                <field name="garden_area" optional="show"/>
                <field name="garden" optional="show"/>
                <field name="garage" optional="hide"/>
                <field name="living_area" optional="hide"/>
                <field name="postcode" optional="show"/>
                <field name="date_availability" optional="hide"/>
                <field name="bedrooms" optional="hide"/>
                <field name="facades" optional="hide"/>
                <field name="garden_orientation" optional="hide"/>
            </tree>
        </field>
    </record>
    <!--FORM VIEW-->
    <record id="estate_property_form_view" model="ir.ui.view">
        <field name="name">Estate Property Form View</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="form_view">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description"/>
                                    <field name="bedrooms"/>
                                    <field name="facades"/>
                                    <field name="garden_area"/>
                                    <field name="garden"/>
                                    <field name="garage"/>
                                    <field name="living_area"/>
                                    <field name="garden_orientation"/>
                                    <field name="state"/>
                                    <field name="active"/>
                                </group>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- SEARCH VIEW-->
    <record id="estate_property_search" model="ir.ui.view">
        <field name="name">Estate property search </field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="estate_search">
                <field name="name"/>
                <field name="selling_price"/>
                <field name="expected_price"/>
                <field name="garden_area"/>
                <field name="garden"/>
                <field name="garage"/>
                <field name="living_area"/>
                <field name="postcode"/>
                <field name="date_availability"/>
                <field name="bedrooms"/>
                <field name="facades"/>
                <field name="garden_orientation"/>
                <!-- SEPERATOR -->
                <separator/>
                <filter string="State search" name="search_state" domain="[('state', 'in', ['new','offer_received'])]"/>
                <group string="Group By">
                    <filter string="Postcode" name="postcode_groupby" context="{'group_by':'postcode'}"/>
                    <filter string="Bedrooms" name="bedroom_groupby" context="{'group_by':'bedrooms'}"/>
                </group>
            </search>
        </field>
    </record>
    <!-- HELP MESSAGE -->
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create new asset
            </p>
        </field>
    </record>
</odoo>