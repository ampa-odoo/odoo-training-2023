<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="estate_property_model_action" model="ir.actions.act_window">
            <field name="name">Properties</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">tree,form</field>
            <!-- default search -->
            <field name="context">{"search_default_available_property":1}</field> 
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                  Empty!
                </p>
              </field>
        </record>
    </data>
            <!-- tree view -->
        <record id="real_estate_list_view" model="ir.ui.view">
            <field name="name">Real Estate List view</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <tree string= "Real Estate" decoration-success="state in ['offer_accepted', 'offer_received']" decoration-bf="state=='offer_accepted'" decoration-muted="state=='sold'">
                    <!-- <tree default_order="date desc">
                         arrange by order -->
                    <!--sequence - must be define in .py file. Allow to order things manually -->
                    <field name="sequence" widget="handle"/>    
                        <field name="name"/>
                        <field name="property_type_id"/>
                        <field name="postcode"/>
                        <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        <field name="bedrooms"/>
                        <field name="living_area"/>
                        <field name="expected_price"/>
                        <field name="selling_price"/>
                        <field name="date_availability" optional="hide"/>
                        <field name="state" optional="hide"/>
                </tree>
            </field>
        </record>
                    <!-- search,filter,group by -->
        <record id="real_estate_property_search" model="ir.ui.view">
            <field name="name">estate.property.search</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <search string="Estate property">
                    <field name="name" string="Title" />
                    <field name="property_type_id"/>
                    <field name="postcode"/>
                    <field name="expected_price"/>
                    <field name="bedrooms"/>
                    <field name="living_area" filter_domain="[('living_area', '>=', self)]"/> 
                        <!-- show living area greater than or equal to the input value -->
                    <field name="facades"/>
                    <separator/>
                    <filter string="Available" name="available_property" domain="[('state','in',['new','offer_received'])]"/>
                    <group expand="1" string="Group By">
                        <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}"/>
                    </group>
                </search>
            </field>
        </record>
        
                    <!-- form view -->
        <record id="real_estate_form_view" model="ir.ui.view">
            <field name="name">Property form view</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">             
                <form>
                    <header>
                        <button name="property_cancel" type="object" string="Cancel" states='new,offer_received,offer_accepted,sold'/>
                        <button name="property_sold" type="object" string="Sold" states='new,offer_received,offer_accepted'/>
                        <field name="state" widget="statusbar" options = "{'clickable' : '1'}"/>
                    </header>
                    <sheet>
                        <widget name="web_ribbon" title="Sold" bg_color="bg-success"
                        attrs="{'invisible': [('state','not in',('sold'))]}"/>
                        <widget name="web_ribbon" title="Canceled" bg_color="bg-danger"
                        attrs="{'invisible': [('state','not in',('canceled'))]}"/>
                        <label for="name" string="Name" />
                            <group>
                                <h1><field name="name" style="width:800%"/></h1>
                            </group>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>   
                        <group>
                            <group>
                                <field name="property_type_id" options="{'no_create': True}"/> 
                                <!-- no_create = new record can not be create from here -->
                            </group>
                            <group>
                                <field name="date_availability"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="expected_price"/>
                            </group>
                            <group>
                                <field name="selling_price"/>
                            </group>
                        </group> 
                        <group>
                            <group>
                                <field name="best_price"/>
                            </group>
                        </group>  
                        <notebook>
                            <page string="Description">
                                    <group>
                                        <field name="postcode"/>
                                    </group>
                                    <group>
                                        <field name="bedrooms"/>
                                    </group>
                                    <group>
                                        <field name="living_area"/>
                                    </group>
                                    <group>
                                        <field name="facades"/>
                                    </group>
                                    <group>
                                        <field name="total_area"/>
                                    </group>
                            </page>                              
                            <page string="Garden">
                                <group>
                                    <field name="garage"/>
                                </group>
                                <group>
                                    <field name="garden"/>
                                </group>
                                <group>
                                    <field name="garden_area" attrs="{'invisible': [('garden', '=', False)]}"/>
                                </group>
                                <group>
                                    <field name="garden_orientation" attrs="{'invisible': [('garden', '=', False)]}"/>
                                </group>
                            </page>
                            <page string="Offer">
                                <field name="offer_ids" attrs="{'readonly': [('state','in',('offer_accepted','sold','canceled'))]}">
                                        <tree string= "offers" editable="top" decoration-success="status=='accepted'" decoration-danger="status=='refused'">
                                            <field name="price" optional="show"/>
                                            <field name="validity" optional="show"/>
                                            <field name="date_deadline" optional="show"/>
                                            <field name="partner_id" optional="show"/>
                                            <button name="action_accepted" type="object" title="ac" icon="fa-check" attrs="{'invisible': [('status', '!=', False)]}"/>
                                            <button name="action_refused" type="object" title="re" icon="fa-times" attrs="{'invisible': [('status', '!=', False)]}"/>
                                            <field name="status" optional="show"/>
                                        </tree>
                                </field>
                            </page>
                            <page string="Other Info">
                                <group>
                                    <field name="buyer_id"/>
                                </group>
                                <group>
                                    <field name="salesperson_id"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <!-- code for chatter -->
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                 </form>
            </field>
        </record>
</odoo>