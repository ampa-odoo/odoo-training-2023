<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<!-- __________Estate Property Offer Tree view ___________ -->
	<record id="estate_property_offer_tree_view" model="ir.ui.view">
		<field name="name">Property Offer</field>
		<field name="model">estate.property.offer</field>
		<field name="arch" type="xml">
			<tree string="Tree View" editable="top">
				<field name="price"/>
				<field name="partner_id"/>
				<field name="validity"/>
				<field name="date_deadline"/>
				<button name="accepted_action" type="object" title="accept" icon="fa-check" attrs="{'invisible':[('status','!=',False)]}"></button>
				<button name="refused_action" type="object" title='refuse'  icon="fa-times" attrs="{'invisible':[('status','!=',False)]}"></button>
				<field name="status" optional="hide"/>
			</tree>
		</field>
	</record>

	<!-- ____________Estate Property Offer Form View_______________ -->
	<record id="estate_property_offer_form_view" model="ir.ui.view">
		<field name="name">Property Offer Form View</field>
		<field name="model">estate.property.offer</field>
		<field name="arch" type="xml">
			<form string="Form View">
				<sheet>
					<group style="margin-top:10px">
						<group>
							<field name="partner_id"/>
							<field name="price" />
							<field name="status"/>
						</group>
						<group>
							<field name="validity"/>
							<field name="create_date"/>
							<field name="date_deadline"/>
						</group>
					</group>
				</sheet>
			</form>
		</field>
	</record>

<!--  ______________Estate property Type Tree View __________________ -->
	<record id="estate_property_type_tree_view" model = "ir.ui.view">
		<field name="name">Property Type Tree View</field>
		<field name="model">estate.property.type</field>
		<field name="arch" type="xml">
			<tree string="tree View">
				<field name="sequence" widget="handle"/>
				<field name="name"/>
			</tree>
		</field>
	</record>

<!-- __________________Estate Property Type Form View___________ -->

	<record id="estate_property_type_form_view" model="ir.ui.view">
		<field name="name">Property Type Form View</field>
		<field name="model">estate.property.type</field>
		<field name="arch" type="xml">
			<form string="Form View">
				<sheet>
					<group style ="margin-top:10px">
						<group><field name="name"/></group>
					</group>
					<notebook>
						<page string="Properties List">
							<field name="property_ids">	
								<tree>
									<field name="name"/>
									<field name="state"/>
									<field name="expected_price"/>
								</tree>
							</field>
						</page>
					</notebook>
				</sheet>
			</form>
		</field>
	</record>
</odoo>