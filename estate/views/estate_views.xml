<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        ------------------------ TREE VIEW ---------------------
        <record id="estate_property_view_tree" model="ir.ui.view">
            <field name="name">Name</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <tree expand= "1" string="tree view">
                    <field name="name"></field>
                    <field name="postcode"></field>
                    <field name="bedrooms"></field>
                    <field name="living_area" ></field>
                    <field name="property_type_id"></field>
                    <field name="garden_area" optional="hide"></field>
                    <field name="date_availability" optional="hide"></field>
                    <field name="expected_price"></field>
                </tree>
            </field>
        </record>
        
        ----------------------- SEARCH VIEW ---------------------
        <record id="estate_property_view_search" model="ir.ui.view">
            <field name="name">Name</field>
            <field name="model">estate.property</field> 
            <field name="arch" type="xml">
                <search string = "estate_search">
                    <field name="name" string="estate"/>
                    <field name="bedrooms"/>
                    <field name="facades"/>
                    <field name="garage"/>
                    <field name="garden_area"/>
                    <field name="expected_price"/>
                    <field name="selling_price"/>
                    <separator/>
                        <filter string="Postcode" name="active" />
                        <separator/>
                        <filter string="bedrooms" name="bedrooms" />
                        <group expand="1" string="Group By">
                            <filter string="Estate_bedroom" name="bedroom" context="{'group_by':'living_area', 'garage':True}"/>
                        </group>
                </search>
            </field>
        </record>

        ------------------------ FORM VIEW ---------------------
        <record id="estate_model_form" model="ir.ui.view">
            <field name="name">Property Form View</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form string="estate_form">
                    <header>
                        <button name="action_sold" type="object" string ="Sold"/>
                        <button name="action_cancel" type="object" string ="Cancel"/>
                        <button name="%(estate.estate_model_action01)d" type="action" string="My Action"/>
                        <field name="state" widget="statusbar" options ="{'clickable':'1'}"/>
                    </header> 
                    <sheet>
                        <label for="name"></label>
                            <h1><field name="name"/></h1>   
                        <group>
                            <group style="Margin-top:30px">
                                <field name="tags_ids" widget ="many2many_tags" />
                            </group>  
                            <group style="Margin-top:30px">
                                <field name="postcode"/>
                            </group>  
                            <group style="Margin-top:30px">
                                <field name="date_availability"/>
                            </group>
                            <group style="Margin-top:30px">
                                <field name="expected_price"/>
                            </group>
                            <group style="Margin-top:30px">
                                <field name="selling_price"/>
                            </group>
                            <group style="Margin-top:30px">
                                <field name="property_type_id"/>
                            </group>
                            <group style="Margin-top:30px">
                                <field name="salesperson_id" widget="many2one_avatar"/>
                            </group>
                            <group style="Margin-top:30px">
                                <field name="buyers_id" widget="many2one_avatar"/>
                            </group>
                            <group style="Margin-top:30px">
                                <field name="best_offer"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <group style="Margin-top:30px">
                                        <field name="description"/>
                                    </group>
                                    <group style="Margin-top:30px">
                                        <field name="garage"/>
                                    </group>
                                    <group style="Margin-top:30px">
                                        <field name="living_area"/>
                                    </group>
                                    <group style="Margin-top:30px">
                                        <field name="garden_area"/>
                                    </group>
                                    <group style="Margin-top:30px">
                                        <field name="bedrooms"/>
                                    </group>
                                    <group style="Margin-top:30px">
                                        <field name="total_area"/>
                                    </group>
                                </group>
                            </page>
                                <page string="Other information">
                                <field name="Other_info"/>
                                <group>
                                    <group style="Margin-top:30px">
                                        <field name="facades"/>
                                    </group>
                                    <group style="Margin-top:30px">
                                        <field name="garage_orientation"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Offer">
                                <field name="offer_ids">
                                    <tree editable="top">
                                        <field name ="price"/>
                                        <field name ="partner_id"/>
                                        <field name="validity"/>
                                        <field name ="date_deadline"/>
                                        <button name="action_accept" string='accepted' type="object" icon="fa-check"/>
                                        <button name="action_refused" string='refused' type="object"  icon="fa-times"/>
                                        <field name ="status"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                        </div>
                </form>
            </field>
        </record>
    </data>
</odoo>