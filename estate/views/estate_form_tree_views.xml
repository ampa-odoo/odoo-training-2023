<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">Name</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="tree view">
            <field name="name"></field>
            <field name="postcode"></field>
            <field name="bedrooms"></field>
            <field name="living_area" ></field>
            <field name="garden_area" optional="hide"></field>
            <field name="date_availability" optional="hide"></field>
            <field name="expected_price"></field>
            </tree>
        </field>
    </record>
    <record id="estate_property_form_view" model="ir.ui.view">
        <field name="name">Estate Form view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                <group>
                    <group>
                        <field name="name"></field>
                    </group>
                    <group>
                        <field name="date_availability"></field>
                    </group>
                </group>
                    
                <group>
                    <group>
                        <field name="postcode"></field>
                    </group>
                    <group>
                        <field name="expected_price"></field>
                    </group>
                </group>
                <group>
                    <group>
                        <field name="selling_price"></field>
                    </group>
                    <group>
                        <field name="bedrooms"></field>
                    </group>
                </group>
                <group>
                    <group>
                        <field name="living_area"></field>
                    </group>
                    <group>
                        <field name="facades"></field>
                    </group>
                </group>
                <group>
                    <group>
                        <fields name="garage"></fields>
                    </group>
                    <group>
                        <field name="garden_area"></field>
                    </group>
                </group>
                <group>
                    <group>
                        <field name="garden_orientation"></field>
                    </group>
                </group>
                <notebook>
                    <page string="Description">
                        <field name="description"></field>
                    </page>
                </notebook>
                </sheet>
            </form>
        </field>

    </record>
</odoo>
