<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <!-- Tree View -->
    <record id="estate_property_offer_tree_view" model="ir.ui.view">
        <field name="name">Offers</field>
        <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <tree string="">
                   <field name="price"/>
                   <field name="partner_id"/>
                   <field name="validity"/>
                   <field name="date_deadline"/>
                   <button name="action_confirm" type="object" icon="fa-check" string=" " attrs="{'invisible':[('status','=','accepted')]}"/>
                   <button name="action_cancel" type="object" icon="fa-times" string=" " attrs="{'invisible':['|',('status','=','accepted'),('status','=','refused')]}"/>
                   <field name="status"/>
                </tree>
            </field>
   </record>
   <!-- Form View -->
   <record id="estate_property_offer_form_view" model="ir.ui.view">
        <field name="name">Offer</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Offer Form View">
                <sheet>
                    <group>
                        <group>
                            <field name="price"/>
                            <field name="partner_id"/>
                            <field name="date_deadline"/>
                        </group>
                        <group>
                            <field name="validity"/>
                            <field name="status"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
   </record>
</odoo>