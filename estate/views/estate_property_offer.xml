<?xml version="1.0" encoding="utf-8"?>

<odoo>
     <!--TREE VIEW-->
     <record id="estate_property_offer_tree_view" model="ir.ui.view">
        <field name="name">Estate Property Tree View</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="tree_view" editable="bottom" decoration-success="state == 'accepted'" decoration-danger="state == 'refused'" decoration-muted="state == 'sold'">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <field name="state"/>
                <button name="offer_accepted" type="object" string=' ' icon="fa-check" attrs="{'invisible': [('state', '!=', False)]}"/>
                <button name="offer_rejected" type="object" string=' ' icon="fa-times" attrs="{'invisible': [('state', '!=', False)]}"/>
            </tree>
        </field>
    </record>
    <!--FORM VIEW-->
    <record id="estate_property_offer_form_view" model="ir.ui.view">
        <field name="name">Estate Property Form View</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="form_view">
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="validity"/>
                        <field name="date_deadline"/>
                        <field name="state"/>
                        <field name="partner_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>   
</odoo>