<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!--  ______________________Estate Property tree View______________________  -->
    
    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">Estate Tree View</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="tree view" expand="1" decoration-success="state in ['offer_accepted', 'offer_received']" decoration-bf="state=='offer_accepted'" decoration-muted="state=='sold'">
                <field name="name"></field>
                <field name="postcode"></field>
                <field name="bedrooms"></field>
                <field name="living_area"></field>
                <field name="property_tag_ids" widget="many2many_tags" options="{'color_field':'color'}"/>
                <field name="property_type_id" optional="hide" widget="many2many_tags"></field>
                <field name="state" optional="hide"/>
                <field name="facades" optional="hide"></field>
                <field name="garden_area" optional="hide"></field>
                <field name="date_availability" optional="hide"></field>
                <field name="expected_price"></field>
            </tree>
        </field>
    </record>

<!--  ____________________________Estate PropertyForm View _______________________-->

    <record id="estate_property_form_view" model="ir.ui.view">
        <field name="name">Estate Form view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="estate_form">
                <header >
                    <button name="sold_button" type='object' string="Sold" class="oe_highlight" attrs="{'invisible':[('state','in',['sold','cancel'])]}"/>
                    <button name="cancelled_button" type="object" string="Cancle" attrs="{'invisible':[('state','in',['sold','cancel'])]}"/>
                    <button name="%(property_type_action)d" type="action" string="Property type"/> 
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <label for="name"></label>
                    <h1><field name="name"/></h1>
                    <group>
                        <group style="margin-top:10px">
                            <field name="property_type_id" options="{'no_create': 'True','can_edit':'True'}"></field>
                            <field name="postcode" />
                            <field name="expected_price"/>
                            <field name="best_price"/>
                        </group>
                        <group style="margin-top:10px">
                            <field name="date_availability"/>
                            <field name="selling_price"/>
                            <field name="property_tag_ids" widget="many2many_tags" options="{'no_create':'True','no_edit':'True','color_field':'color'}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="bedrooms"></field>
                                <field name="living_area"></field>
                                <field name="facades"></field>
                                <field name="total_area"></field>
                            </group>
                        </page>
                        <page string="Garden Details">
                            <group>
                                <field name="garden"/>
                                <field name="garage"></field>
                                <field name="garden_orientation" attrs="{'invisible':[('garden','=', False)]}"></field>
                                <field name="garden_area" attrs="{'invisible':[('garden','=',False)]}"/>
                            </group>
                        </page>
                        <page string="Offer">
                            <group>
                                <field name="offer_ids" attrs="{'readonly':[('state','in',['cancel','sold'])]}"></field>
                            </group>   
                        </page>
                        <page string="Other Info">
                            <group>
                                <group>
                                    <field name="buyer_id" widget="many2one_avatar"></field>
                                </group>
                                <group>
                                    <field name="salesman_id" widget="many2one_avatar"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="state"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div> 
            </form>
        </field>
    </record>

    <!--______________________Search View________________________-->

    <record id="estate_property_search_view" model="ir.ui.view">
        <field name="name">Estate search view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="property">
                <field name="name" filter_domain="[('name', 'ilike', self)]" string="property name"></field>
                <field name="postcode" filter_domain="[('postcode','ilike',self)]"></field>
                <field name="bedrooms"></field>
                <field name="facades"></field>
                <filter name="filter_date_availablity" date="date_availability" string="Avilable Date"></filter>
                <filter name="Living_area_filter" string="Living Area" domain="[('living_area','>=',1)]"/>
                <filter name="Selling_price_filter" string="Selling Price" domain="[('selling_price','>=',2000001)]"/>
                <filter string="avilable" name="avilable_filter" domain="[('state','in',['new','offer_accepted'])]"/>
                <group expand="1" string="Group By">
                    <filter string="Facades" name="facades" context="{'group_by':'facades'}"></filter>
                    <filter string="Living Area" name="living_area" context="{'group_by':'living_area'}"></filter>
                </group>
            </search>
        </field>
    </record>
</odoo>