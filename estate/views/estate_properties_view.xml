<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!--  ______________________tree View____________________________________  -->
    
    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">Estate Tree View</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="tree view" expand="1">
            <field name="name"></field>
            <field name="postcode"></field>
            <field name="bedrooms"></field>
            <field name="living_area" ></field>
            <field name="property_type_id" optional="hide"></field>
            <field name="facades" optional="hide"></field>
            <field name="garden_area" optional="hide"></field>
            <field name="date_availability" optional="hide"></field>
            <field name="expected_price"></field>
            </tree>
        </field>
    </record>

<!--  ___________________________________Form View __________________________________________________     -->
    
    <record id="estate_property_form_view" model="ir.ui.view">
        <field name="name">Estate Form view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="estate_form">
                <header >
                    <field name="state" widget="statusbar" options="{'clickable':'1'}"></field>
                </header>
                <sheet>
                    <label for="name"></label>
                    <h1><field name="name"/></h1>
                    <group>
                        <group style="margin-top:10px">
                            <field name="property_type_id"></field>
                            <field name="postcode" />
                            <field name="expected_price"/>
                        </group>
                        <group style="margin-top:10px">
                            <field name="date_availability"/>
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group style="margin-top:10px">
                                <field name="bedrooms"></field>
                                <field name="living_area"></field>
                                <field name="facades"></field>
                            </group>
                        </page>
                        <page string="Garden">
                            <group style="margin-top:10px">
                                <field name="garage"></field>
                                <field name="garden_orientation" ></field>
                                <field name="garden_area"/>
                            </group>
                        </page>
                        <page string="Other Info">
                            <group>
                                <group>
                                    <field name="buyer_id"></field>
                                </group>
                                <group>
                                    <field name="salesman_id" />
                                </group>
                            </group>

                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>

    </record>

    <!--        _______________________Search View________________________________                                    -->

    <record id="estate_property_search_view" model="ir.ui.view">
        <field name="name">Estate search view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="property">
                <field name="name" filter_domain="[('name', 'ilike', self)]" string="property name"></field>
                <field name="postcode" filter_domain="[('postcode','ilike',self)]"></field>
                <field name="bedrooms"></field>
                <field name="facades"></field>
                <filter name="filter_date_availablity" date="date_availability" string="Avilable Date"/>
                <filter name="Living_area_filter" string="Living Area" domain="[('living_area','>=',1)]"/>
                <filter name="Selling_price_filter" string="Selling Price" domain="[('selling_price','>=',2000001)]"/>
                <group expand="1" string="Group By">
                    <filter string="Facades" name="facades" context="{'group_by':'facades'}"/>
                    <filter string="Living Area" name="living_area" context="{'group_by':'living_area'}"/>
                </group>
                
                
            </search>
        </field>
        
    </record>
</odoo>
