<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<!--  ______________Estate property Type Tree View __________________ -->
	<record id="estate_property_type_tree_view" model = "ir.ui.view">
		<field name="name">Property Type Tree View</field>
		<field name="model">estate.property.type</field>
		<field name="arch" type="xml">
			<tree string="tree View">
				<field name="sequence" widget="handle"/>
				<field name="name"/>
			</tree>
		</field>
	</record>

	<!-- __________________Estate Property Type Form View___________ -->

	<record id="estate_property_type_form_view" model="ir.ui.view">
		<field name="name">Property Type Form View</field>
		<field name="model">estate.property.type</field>
		<field name="arch" type="xml">
			<form string="Form View">
				<sheet>
					<div class="oe_button_box" name="button_box">
                            <button
	                            name="%(estate.estate_property_offer_action)d"
	                            type="action"
	                            class="oe_stat_button"
	                            icon="fa-money">
	                            <field name="offer_count" widget="statinfo" string="offers"/>
                            </button>
                    </div>
                    <div class="oe_title">
                        <label for="name"></label>
                        <h1><field name="name"/></h1>
                    </div>
					<notebook>
						<page string="Properties List">
							<field name="property_ids">	
								<tree>
									<field name="name"/>
									<field name="state"/>
									<field name="expected_price"/>
								</tree>
							</field>
						</page>
					</notebook>
				</sheet>
			</form>
		</field>
	</record>
</odoo>