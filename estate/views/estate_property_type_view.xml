<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--  property actions -->
        <record id="property_type_model_action" model="ir.actions.act_window">
            <field name="name">Property Types</field>
            <field name="res_model">estate.property.type</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>

            <!-- tree view -->
    <record id="property_type_list_view" model="ir.ui.view">
        <field name="name">Property Type List view</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <tree string= "Property Type">
                <field name="name" optional="show"/>
            </tree>
        </field>
    </record>

    <!-- form view -->
    <record id="property_type_form_view" model="ir.ui.view">
        <field name="name">Property type form view</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet> 
                    <label for="name" string="Name" />
                        <group>
                            <h1><field name="name" style="width:800%"/></h1>
                        </group>
                        <notebook>
                            <page string="Property">
                                <field name="property_ids">
                                    <tree string= "Property Name">
                                        <field name="name" optional="show"/>   
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>