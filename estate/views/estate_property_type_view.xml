<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <!-- property type action -->
    <record id="estate_property_type_action" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!--TREE VIEW-->
    <record id="estate_property_type_tree" model="ir.ui.view">
        <field name="name">Estate Property  Type tree View</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <tree string="tree_view">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <!-- FORM VIEW -->
    <record id="estate_property_type_form_view" model="ir.ui.view">
        <field name="name">Estate Property  Type Form View</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form string="form_view">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button  name="action_view_offer" type="object" class="oe_stat_button" icon="fa-money">
                            <field name="offer_count" widget="statinfo" string="Offers"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <notebook>   
                        <page string='properties'>
                            <field name="property_types_ids">
                                <tree>
                                    <field name='name'/>
                                    <field name='expected_price'/>
                                    <field name='state'/>
                                </tree>    
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>