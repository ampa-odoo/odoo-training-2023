<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="estate_property_tree_view" model="ir.ui.view">
        <field name="name">Estate Property Tree View</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Tree View">
                <field name="name"/>
                <field name="description" optional="hide"/>
                <field name="postcode"/>
                <field name="bedrooms" optional="show"/>
                <field name="living_area" optional="hide"/>
                <field name="facades"/>
                <field name="data_avabilability"/>
                <field name="selling_price"/>
                <field name="expected_price"/>
                <field name="garage"/>
                <field name="garden_area" optional="hide"/>
                <field name="garden_orientation" optional="hide"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <record id="estate_property_form_view" model="ir.ui.view">
        <field name="name">Estate Property form View</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="form View">
                <sheet>
                    <div class ="title">
                        <h1>
                            <field name="name" placeholder="Property name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="tag_ids" widget="many2many_tags"/>    
                    </group>
                    <group>
                        <group>
                            <field name="property_type_id"/>
                            <field name="selling_price"/>
                            <field name="expected_price"/>
                        </group>
                        <group>
                            <field name="data_avabilability"/>
                            <field name="postcode"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden_area"/>
                                <field name="garden_orientation"/>
                                <field name="state"/>
                            </group>
                        </page>
                        <page string="Offer">
                                <field name="offer_ids"/>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="user_id"/>
                                <field name="buyer_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="estate_property_search_view" model="ir.ui.view">
        <field name="name">Estate Property form View</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <field name="garage"/>
                <field name="garden_area"/>
                <filter string="Available" name="available" domain="[('garden_orientation', 'in', ['north','south'])]"/>
                <group>
                    <filter string="Postcode" name="postcode_groupby" context="{'group_by': 'postcode'}" />
                </group>
            </search>
        </field> 
    </record>
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">estate</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create a new property
            </p>
        </field>
    </record>

</odoo>